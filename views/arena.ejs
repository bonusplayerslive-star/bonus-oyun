<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL ARENA | ÖLÜMCÜL KARŞILAŞMA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>
    
    <style>
        :root { --neon-green: #39FF14; --neon-red: #ff003c; --neon-yellow: #ffc107; }
        
        /* Mobil uyumlu scroll ayarı */
        body { 
            background: #000; 
            color: #fff; 
            font-family: 'Orbitron', sans-serif; 
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden;
            overflow-y: auto; /* Mobilde butonların görünmesi için kaydırmaya izin ver */
        }

        /* Savaş Sinematiği Overlay */
        #video-overlay { 
            display: none; 
            position: fixed; 
            inset: 0; 
            background: rgba(0,0,0,0.98); 
            z-index: 9999; 
            flex-direction: column; 
            align-items: center; 
            justify-content: center; 
            padding: 10px;
        }

        .battle-view { 
            width: 100%; 
            max-width: 950px; 
            border: 2px solid var(--neon-green); 
            position: relative; 
            box-shadow: 0 0 30px rgba(57, 255, 20, 0.2); 
        }

        video { width: 100%; display: block; filter: contrast(1.1) brightness(1.1); }

        /* Karakter Panelleri Mobil Revize */
        .player-header { 
            display: flex; 
            justify-content: space-between; 
            width: 100%; 
            max-width: 950px; 
            margin-bottom: 15px; 
        }

        .char-card { text-align: center; width: 30%; }
        .char-card img { 
            width: 60px; height: 60px; 
            border-radius: 50%; 
            border: 2px solid var(--neon-green); 
            margin-bottom: 5px; 
            object-fit: cover; 
        }

        .vs-label { 
            font-size: 1.5rem; 
            color: var(--neon-red); 
            text-shadow: 0 0 10px var(--neon-red); 
            align-self: center; 
        }

        /* Bahis Kartları Mobil Optimizasyon */
        .bet-card { 
            background: rgba(20,20,20,0.8); 
            border: 1px solid #333; 
            transition: 0.3s; 
            cursor: pointer; 
            padding: 15px 5px; 
            border-radius: 10px; 
            text-align: center;
            height: 100%;
        }

        .bet-card h3 { font-size: 1.1rem; margin-bottom: 5px; }
        .bet-card p { font-size: 0.8rem; margin: 0; }
        .bet-card:hover { border-color: var(--neon-green); }
        .bet-card.active { 
            border-color: var(--neon-green); 
            box-shadow: 0 0 15px rgba(57, 255, 20, 0.4); 
            background: #111; 
        }

        /* Başlık Küçültme */
        h1 { font-size: 1.5rem !important; }
        h4 { font-size: 1rem !important; }

        .win-banner { 
            position: absolute; top: 50%; left: 50%; 
            transform: translate(-50%, -50%) scale(0); 
            font-size: 2.5rem; font-weight: 900; 
            z-index: 10001; text-align: center; 
            transition: 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275); 
            width: 100%; 
        }

        .banner-active { transform: translate(-50%, -50%) scale(1); }
        #timer { font-size: 4rem; color: var(--neon-red); text-shadow: 0 0 20px var(--neon-red); }
        .status-text { margin-top: 10px; color: var(--neon-green); font-size: 0.9rem; font-weight: bold; }

        /* Mobilde Butonu Sabitleme Opsiyonu */
        @media (max-width: 768px) {
            .container { padding-bottom: 100px; }
            .btn-lg { width: 100%; }
        }
    </style>
</head>
<body>

    <div id="video-overlay">
        <div class="player-header">
            <div class="char-card">
                <img src="/caracter/profile/<%= user.selectedAnimal %>.png">
                <div class="text-white small" style="font-size: 0.7rem;"><%= user.nickname %></div>
            </div>
            <div class="vs-label">VS</div>
            <div class="char-card">
                <img id="opp-img" src="/img/searching.png">
                <div id="opp-name" class="text-white small" style="font-size: 0.7rem;">ARANIYOR...</div>
            </div>
        </div>
        <div class="battle-view">
            <div id="result-banner" class="win-banner"></div>
            <video id="battle-video" playsinline muted autoplay></video>
        </div>
        <div id="battle-status" class="status-text text-uppercase">BAĞLANTI KURULUYOR...</div>
    </div>

    <div class="container py-4">
        <div id="lobby-ui" class="text-center">
            <h1 class="mb-4 text-uppercase" style="color:var(--neon-green); text-shadow: 0 0 10px var(--neon-green);">ARENA</h1>
            
            <div id="bet-selection">
                <h4 class="mb-4 text-white-50">SALDIRI MODU SEÇİN</h4>
                <div class="row g-2 justify-content-center">
                    <div class="col-6 col-md-3" onclick="setMultiplier(1, this)">
                        <div class="bet-card active"><h3>NORMAL</h3><p>25 BPL</p></div>
                    </div>
                    <div class="col-6 col-md-3" onclick="setMultiplier(2, this)">
                        <div class="bet-card"><h3>2X GÜÇ</h3><p>55 BPL</p></div>
                    </div>
                    <div class="col-6 col-md-3" onclick="setMultiplier(4, this)">
                        <div class="bet-card"><h3>4X ÖFKE</h3><p>75 BPL</p></div>
                    </div>
                    <div class="col-6 col-md-3" onclick="setMultiplier(6, this)">
                        <div class="bet-card"><h3 style="color: #ff00ff;">6X MAX</h3><p>85 BPL</p></div>
                    </div>
                </div>
                
                <div class="mt-5">
                    <button onclick="startSearch()" class="btn btn-danger btn-lg px-5 py-3 fw-bold w-100 w-md-auto">
                        SALDIRIYI BAŞLAT
                    </button>
                </div>
            </div>

            <div id="matching-ui" style="display:none;">
                <div id="timer">13</div>
                <h3 class="mt-3" style="color:var(--neon-green); font-size: 1.2rem;">RAKİP ARANIYOR...</h3>
                <div class="spinner-border text-success mt-3" role="status"></div>
            </div>
        </div>
    </div>

    <script>
        const arenaSocket = io();
        const videoElement = document.getElementById('battle-video');
        const statusMsg = document.getElementById('battle-status');
        const resultBanner = document.getElementById('result-banner');
        
        const myId = "<%= user._id %>";
        const myNick = "<%= user.nickname %>";
        const myAnimal = "<%= user.selectedAnimal %>";

        let selectedMultiplier = 1;
        let timerInt;
        let isMatchFound = false;

        function setMultiplier(val, el) {
            selectedMultiplier = val;
            document.querySelectorAll('.bet-card').forEach(c => c.classList.remove('active'));
            // Tıklanan sütunun içindeki kartı bul
            el.querySelector('.bet-card').classList.add('active');
        }

        function startSearch() {
            if (!arenaSocket.connected) {
                Swal.fire('Hata', 'Bağlantı yok!', 'error');
                return;
            }
            document.getElementById('bet-selection').style.display = 'none';
            document.getElementById('matching-ui').style.display = 'block';
            arenaSocket.emit('find-match', { myNick, myAnimal });
            runTimer();
        }

        function runTimer() {
            let count = 13;
            timerInt = setInterval(() => {
                if (isMatchFound) { clearInterval(timerInt); return; }
                count--;
                document.getElementById('timer').innerText = count;
                if(count <= 0) {
                    clearInterval(timerInt);
                    arenaSocket.emit('start-bot-battle', { multiplier: selectedMultiplier, userId: myId });
                }
            }, 1000);
        }

        arenaSocket.on('pvp-found', (data) => {
            isMatchFound = true;
            const opponent = data.players.find(p => p.id !== arenaSocket.id);
            document.getElementById('matching-ui').style.display = 'none';
            document.getElementById('opp-name').innerText = opponent.nick;
            document.getElementById('opp-img').src = `/caracter/profile/${opponent.animal}.png`;
            runBattleSequence(myAnimal, opponent.animal, Math.random() > 0.5, 50);
        });

        arenaSocket.on('battle-result', (data) => {
            isMatchFound = true;
            document.getElementById('matching-ui').style.display = 'none';
            document.getElementById('opp-name').innerText = data.opponentName;
            document.getElementById('opp-img').src = `/caracter/profile/${data.opponentAnimal}.png`;
            runBattleSequence(myAnimal, data.opponentAnimal, data.isWin, data.prize);
        });

        async function runBattleSequence(player, enemy, isWin, prize) {
            document.getElementById('video-overlay').style.display = 'flex';
            await playVideoAsync(player, player + "1", "SALDIRI!");
            await playVideoAsync(enemy, enemy + "1", "RAKİP ATAĞI!");
            
            const winner = isWin ? player : enemy;
            resultBanner.innerText = isWin ? "ZAFER" : "KAYIP";
            resultBanner.style.color = isWin ? "var(--neon-green)" : "var(--neon-red)";
            
            await playVideoAsync(winner, winner, isWin ? `KAZANDIN! +${prize}` : "YENİLDİN!");
            resultBanner.classList.add('banner-active');
            setTimeout(() => { window.location.href = "/profil"; }, 3000);
        }

        function playVideoAsync(animal, file, text) {
            return new Promise((resolve) => {
                statusMsg.innerText = text;
                videoElement.src = `/caracter/move/${animal}/${file}.mp4`;
                videoElement.onended = resolve;
                videoElement.onerror = () => resolve();
                videoElement.load();
                videoElement.play().catch(resolve);
            });
        }
    </script>
</body>
</html>
