

<%- include('header') %>
const urlParams = new URLSearchParams(window.location.search);
const matchRoom = urlParams.get('match');


<style>
    /* Arena Tam Ekran Atmosferi */
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        background: #000 !important;
        overflow: hidden; /* Savaş sırasında kaydırmayı engeller */
    }

    .arena-main-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    /* Bahis Ekranı */
    #bet-screen {
        z-index: 10;
        background: radial-gradient(circle, #1a1a2e 0%, #0f0f1a 100%);
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .bet-card {
        transition: transform 0.3s ease;
        border: 2px solid rgba(255, 215, 0, 0.3);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        cursor: pointer;
        border-radius: 15px;
        padding: 20px;
        margin: 10px;
        min-width: 180px;
    }

    .bet-card:hover {
        transform: scale(1.05);
        border-color: #ffc107;
        box-shadow: 0 0 20px rgba(255, 193, 7, 0.4);
    }

    /* --- TAM EKRAN VİDEO ALANI --- */
    #battle-area {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: #000;
        display: none;
        z-index: 9999;
    }

    #battle-video {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Videoyu ekranı tamamen kaplayacak şekilde uzatır/keser */
    }

    /* Video Üstü Bilgi Katmanı */
    .video-overlay {
        position: absolute;
        top: 30px;
        width: 100%;
        text-align: center;
        z-index: 10001;
        pointer-events: none;
    }

    #battle-status {
        font-family: 'Orbitron', sans-serif;
        font-size: 2.5rem;
        font-weight: 900;
        color: #ffc107;
        text-shadow: 0 0 15px #000, 0 0 30px #000;
        text-transform: uppercase;
        letter-spacing: 3px;
    }

    .opponent-badge {
        background: rgba(220, 53, 69, 0.8);
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: bold;
        margin-top: 10px;
        display: inline-block;
        border: 2px solid #fff;
    }

    /* Bekleme Ekranı */
    #wait-screen {
        display: none;
        text-align: center;
        z-index: 20;
    }

    .countdown-number {
        font-size: 150px;
        font-weight: 900;
        color: #ffc107;
        text-shadow: 0 0 30px rgba(255, 193, 7, 0.5);
    }
</style>

<div class="arena-main-container">
    <div id="bet-screen">
        <% if (user.selectedAnimal === 'none' || !user.selectedAnimal) { %>
            <div class="text-center p-5 border border-warning rounded">
                <h2 class="text-warning">DÖVÜŞÇÜ SEÇİLMEDİ!</h2>
                <p>Arenaya girmek için önce profilinden bir karakter seçmelisin.</p>
                <a href="/profil" class="btn btn-warning fw-bold">PROFİLE GİT</a>
            </div>
        <% } else { %>
            <h1 class="mb-5 text-warning fw-bold" style="letter-spacing: 5px;">ARENA DÜELLOSU</h1>
            <div class="d-flex flex-wrap justify-content-center">
                <div class="bet-card" onclick="startSearch(25, 50)">
                    <h4 class="text-success">BAŞLANGIÇ</h4>
                    <hr>
                    <h3>25 ➔ 50</h3>
                    <small>BPL TOKEN</small>
                </div>
                <div class="bet-card" onclick="startSearch(75, 200)">
                    <h4 class="text-info">PROFESYONEL</h4>
                    <hr>
                    <h3>75 ➔ 200</h3>
                    <small>BPL TOKEN</small>
                </div>
            </div>
        <% } %>
    </div>

    <div id="wait-screen">
        <div class="countdown-number" id="timer">10</div>
        <h2 class="text-white">RAKİP ARANIYOR...</h2>
        <div class="spinner-grow text-warning mt-3"></div>
    </div>

    <div id="battle-area">
        <div class="video-overlay">
            <div id="battle-status">HAZIRLAN...</div>
            <div id="opp-info" class="opponent-badge">RAKİP: ARANIYOR</div>
        </div>
        <video id="battle-video" playsinline>
            <source id="video-src" src="" type="video/mp4">
        </video>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    const socket = io();
    const video = document.getElementById('battle-video');
    const videoSrc = document.getElementById('video-src');
    const battleArea = document.getElementById('battle-area');
    const statusText = document.getElementById('battle-status');
    const oppInfo = document.getElementById('opp-info');

    // URL'den Davet Kontrolü (Oda sahibinin nicki ile direkt eşleşme)
    const urlParams = new URLSearchParams(window.location.search);
    const inviteFrom = urlParams.get('from');

    if (inviteFrom) {
        document.getElementById('bet-screen').style.display = 'none';
        document.getElementById('wait-screen').style.display = 'block';
        socket.emit('arena-invite-accept', { from: inviteFrom });
    }

    function startSearch(bet, prize) {
        const myBpl = parseInt("<%= user.bpl %>");
        if (myBpl < bet) {
            return Swal.fire('Hata', 'Yetersiz BPL!', 'error');
        }
        document.getElementById('bet-screen').style.display = 'none';
        document.getElementById('wait-screen').style.display = 'block';
        
        // Önce online oyuncu aranır, backend'de 10sn sonra bot devreye girer
        socket.emit('arena-join-queue', { bet, prize });

        let count = 10;
        const timer = setInterval(() => {
            count--;
            document.getElementById('timer').innerText = count;
            if(count <= 0) clearInterval(timer);
        }, 1000);
    }

    // SAVAŞ BAŞLADIĞINDA (MAÇ BULUNDU)
    socket.on('arena-match-found', (data) => {
        document.getElementById('wait-screen').style.display = 'none';
        battleArea.style.display = 'block';
        
        // Bilgileri güncelle
        oppInfo.innerText = `RAKİP: ${data.opponent}`;
        
        // 1. HAMLE VİDEOSU: Rakibin hamlesi (hayvanadı1.mp4)
        const moveUrl = `/caracter/move/${data.opponentAnimal}/${data.opponentAnimal}1.mp4`;
        statusText.innerText = "SAVAŞ HAMLESİ!";
        
        playSequence(moveUrl, () => {
            // 2. ZAFER VİDEOSU: Kazananın sevinci (hayvanadı.mp4)
            const winUrl = `/caracter/move/${data.winnerAnimal}/${data.winnerAnimal}.mp4`;
            statusText.innerText = `KAZANAN: ${data.winnerNick}`;
            statusText.style.color = "#00ff88";
            
            playSequence(winUrl, () => {
                setTimeout(() => {
                    window.location.href = '/profil'; // Savaş bitti profil sayfasına dön
                }, 3000);
            });
        });
    });

    function playSequence(url, callback) {
        videoSrc.src = url;
        video.load();
        video.play().catch(e => {
            console.log("Video oynatma hatası:", e);
            callback(); // Hata olursa sonrakine geç
        });
        video.onended = callback;
    }

    // Bot %55 kazanma mantığı ve Online Oyuncu önceliği Backend (app.js) tarafında yönetiliyor.
</script>


