<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL ARENA | SAVAŞ ALANI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root { --neon-green: #39FF14; --neon-red: #ff003c; --neon-blue: #00f3ff; }
        body { 
            background: #000; color: #fff; font-family: 'Orbitron', sans-serif; 
            overflow: hidden; height: 100vh; width: 100vw; margin:0; 
        }

        /* Video Katmanı - Tam Ekran Mobil Uyumlu */
        #video-overlay {
            display: none; position: fixed; inset: 0; background: #000;
            z-index: 9999; flex-direction: column; align-items: center; justify-content: center;
        }
        .battle-container {
            width: 100%; height: 100%; display: flex; flex-direction: column;
            align-items: center; justify-content: center; position: relative;
        }
        video { 
            width: 100%; height: 100vh; object-fit: cover; 
            border-top: 2px solid var(--neon-green); border-bottom: 2px solid var(--neon-green);
        }

        /* Arayüz Elemanları */
        .hud-top {
            position: absolute; top: 20px; width: 90%; display: flex;
            justify-content: space-between; z-index: 100;
        }
        .hud-card { text-align: center; background: rgba(0,0,0,0.6); padding: 10px; border-radius: 10px; border: 1px solid var(--neon-blue); width: 100px; }
        .hud-card img { width: 50px; height: 50px; border-radius: 50%; border: 2px solid var(--neon-green); }

        .vs-box { font-size: 2rem; color: var(--neon-red); text-shadow: 0 0 10px var(--neon-red); font-weight: bold; }

        .win-message {
            position: absolute; top: 50%; width: 100%; text-align: center;
            font-size: 3.5rem; font-weight: 900; z-index: 101;
            display: none; text-shadow: 0 0 30px #000;
        }

        /* Lobi Tasarımı */
        .lobby-box { height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 20px; }
        .bet-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; width: 100%; max-width: 400px; }
        .bet-item { 
            background: #111; border: 2px solid #333; padding: 20px; text-align: center;
            cursor: pointer; transition: 0.3s; border-radius: 15px;
        }
        .bet-item.active { border-color: var(--neon-green); box-shadow: 0 0 15px var(--neon-green); }
        
        #timer-box { font-size: 6rem; color: var(--neon-red); line-height: 1; }

.bet-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Yan yana 2 adet kutu */
    gap: 10px;
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
}

.bet-item {
    background: rgba(20, 20, 20, 0.8);
    border: 2px solid #333;
    padding: 15px;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.bet-item.active {
    border-color: var(--neon-green);
    background: rgba(57, 255, 20, 0.1);
    box-shadow: 0 0 15px rgba(57, 255, 20, 0.2);
}

.bet-item h4 { font-weight: bold; margin-bottom: 5px; }


    </style>
</head>
<body>

    <div id="video-overlay">
        <div class="hud-top">
            <div class="hud-card">
                <img src="/caracter/profile/<%= user.selectedAnimal %>.jpg">
                <div class="small"><%= user.nickname %></div>
            </div>
            <div class="vs-box">VS</div>
            <div class="hud-card">
                <img id="opp-img" src="/img/searching.png">
                <div id="opp-name" class="small">...</div>
            </div>
        </div>

        <div class="battle-container">
            <h1 id="win-text" class="win-message"></h1>
            <video id="arena-video" playsinline muted></video>
        </div>
        <div id="battle-status" class="p-3 text-uppercase text-center" style="color: var(--neon-green)">KOMUTA BEKLENİYOR...</div>
    </div>

    <div class="lobby-box" id="lobby-ui">
        <h2 class="mb-4 text-center" style="color:var(--neon-green)">BPL ARENA SEKTÖRÜ</h2>
        
        <div id="selection-area">
            <div class="bet-grid mb-4">
    <div class="bet-item active" onclick="selectBet(1, 25, this)">
        <h4 class="mb-0">X1</h4>
        <span class="small text-success">25 BPL</span>
    </div>
    <div class="bet-item" onclick="selectBet(2, 50, this)">
        <h4 class="mb-0">X2</h4>
        <span class="small text-info">50 BPL</span>
    </div>
    <div class="bet-item" onclick="selectBet(5, 125, this)">
        <h4 class="mb-0">X5</h4>
        <span class="small text-warning">125 BPL</span>
    </div>
    <div class="bet-item" onclick="selectBet(10, 250, this)">
        <h4 class="mb-0">X10</h4>
        <span class="small text-danger">250 BPL</span>
    </div>
</div>
            <button onclick="readyToFight()" class="btn btn-danger btn-lg w-100 py-3 fw-bold">SALDIRIYA BAŞLA</button>
        </div>

        <div id="matching-area" style="display:none;" class="text-center">
            <div id="timer-box">13</div>
            <p class="mt-3 text-info">HEDEF TARANIYOR...</p>
            <div class="spinner-border text-danger"></div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const video = document.getElementById('arena-video');
        const overlay = document.getElementById('video-overlay');
        const winText = document.getElementById('win-text');
        
        let selectedMult = 1;
        let selectedCost = 25;
        const myNick = "<%= user.nickname %>";
        const myAnimal = "<%= user.selectedAnimal %>";

        // URL'den Oda Kontrolü (Chat/Meeting'den gelenler için)
        const urlParams = new URLSearchParams(window.location.search);
        const customRoom = urlParams.get('room');

        window.onload = () => {
            if(customRoom) {
                // Eğer özel oda ile geldiyse direkt odaya sok
                socket.emit('join-arena-room', { room: customRoom, nick: myNick, animal: myAnimal });
                document.getElementById('selection-area').innerHTML = `<h3 class="text-warning">ODA BAĞLANTISI KURULDU...</h3>`;
            }
        };

        function selectBet(mult, cost, el) {
            selectedMult = mult;
            selectedCost = cost;
            document.querySelectorAll('.bet-item').forEach(i => i.classList.remove('active'));
            el.classList.add('active');
        }

        function readyToFight() {
            // Bakiye Kontrolü (Client tarafı ön kontrol)
            if(<%= user.bpl %> < selectedCost) {
                alert("Yetersiz BPL!"); return;
            }

            document.getElementById('selection-area').style.display = 'none';
            document.getElementById('matching-area').style.display = 'block';

            // Havuza gir veya Mevcut odayı onayla
            socket.emit('arena-ready', { 
                mult: selectedMult, 
                cost: selectedCost, 
                room: customRoom,
                nick: myNick,
                animal: myAnimal
            });

            startTimer();
        }

        function startTimer() {
            let timeLeft = 13;
            const timerObj = setInterval(() => {
                timeLeft--;
                document.getElementById('timer-box').innerText = timeLeft;
                if(timeLeft <= 0) clearInterval(timerObj);
            }, 1000);
        }

        // --- SAVAŞ DÖNGÜSÜ (SERVERDAN GELEN KOMUTLAR) ---

        socket.on('match-started', async (data) => {
            overlay.style.display = 'flex';
            const opponent = data.players.find(p => p.nick !== myNick);
            document.getElementById('opp-name').innerText = opponent.nick;
            document.getElementById('opp-img').src = `/caracter/profile/${opponent.animal}.png`;

            // 1. Sekans: Senin Saldırın
            await playMove(myAnimal, "attack");
            // 2. Sekans: Rakibin Saldırısı
            await playMove(opponent.animal, "attack");
            // 3. Sekans: Zafer/Bozgun Videosu
            const winner = data.winner; // Server kimin kazandığını gönderir
            await playFinal(winner.animal, winner.nick === myNick);
        });

        async function playMove(animal, type) {
            return new Promise(res => {
                document.getElementById('battle-status').innerText = `${animal.toUpperCase()} SALDIRIYOR...`;
                video.src = `/caracter/move/${animal}/${type}.mp4`;
                video.onended = res;
                video.play();
            });
        }

        async function playFinal(animal, amIWinner) {
            return new Promise(res => {
                document.getElementById('battle-status').innerText = "FİNAL KARARI VERİLİYOR...";
                video.src = `/caracter/move/${animal}/win.mp4`;
                
                // 5. Saniyede İsmi Yazdır
                setTimeout(() => {
                    winText.innerText = amIWinner ? "KAZANDIN!" : "KAYBETTİN!";
                    winText.style.color = amIWinner ? "var(--neon-green)" : "var(--neon-red)";
                    winText.style.display = "block";
                }, 5000);

                video.onended = () => {
                    setTimeout(() => window.location.href = "/chat", 3000);
                };
                video.play();
            });
        }
    </script>
</body>
</html>


