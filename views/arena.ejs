<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL ARENA | SAVAŞ ALANI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root { --neon-green: #39FF14; --neon-red: #ff003c; --neon-blue: #00f3ff; }
        body { 
            background: #000; color: #fff; font-family: 'Orbitron', sans-serif; 
            overflow: hidden; height: 100vh; width: 100vw; margin:0; 
        }

        #video-overlay {
            display: none; position: fixed; inset: 0; background: #000;
            z-index: 9999; flex-direction: column; align-items: center; justify-content: center;
        }
        .battle-container {
            width: 100%; height: 100%; display: flex; flex-direction: column;
            align-items: center; justify-content: center; position: relative;
        }
        video { 
            width: 100%; height: 100vh; object-fit: cover; 
            border-top: 2px solid var(--neon-green); border-bottom: 2px solid var(--neon-green);
        }

        .hud-top {
            position: absolute; top: 20px; width: 90%; display: flex;
            justify-content: space-between; z-index: 100;
        }
        .hud-card { text-align: center; background: rgba(0,0,0,0.6); padding: 10px; border-radius: 10px; border: 1px solid var(--neon-blue); width: 120px; }
        .hud-card img { width: 60px; height: 60px; border-radius: 50%; border: 2px solid var(--neon-green); object-fit: cover; }

        .vs-box { font-size: 2rem; color: var(--neon-red); text-shadow: 0 0 10px var(--neon-red); font-weight: bold; align-self: center; }

        .win-message {
            position: absolute; top: 40%; width: 100%; text-align: center;
            font-size: 3.5rem; font-weight: 900; z-index: 101;
            display: none; text-shadow: 0 0 30px #000;
        }

        .lobby-box { height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 20px; }
        
        .bet-grid {
            display: grid; grid-template-columns: repeat(2, 1fr);
            gap: 15px; width: 100%; max-width: 450px; margin-bottom: 20px;
        }

        .bet-item {
            background: rgba(20, 20, 20, 0.8); border: 2px solid #333;
            padding: 15px; border-radius: 12px; cursor: pointer; transition: 0.3s;
        }

        .bet-item.active {
            border-color: var(--neon-green); background: rgba(57, 255, 20, 0.1);
            box-shadow: 0 0 15px rgba(57, 255, 20, 0.2);
        }

        #timer-box { font-size: 5rem; color: var(--neon-red); font-weight: bold; }
    </style>
</head>
<body>

    <div id="video-overlay">
    <div class="hud-top">
        <div class="hud-card">
            <img src="/caracter/profile/<%= user.selectedAnimal %>.jpg">
            <div class="small mt-1"><%= user.nickname %></div>
        </div>
        <div class="vs-box">VS</div>
        <div class="hud-card">
            <img id="opp-img" src="/caracter/profile/Gorilla.jpg"> 
            <div id="opp-name" class="small mt-1">...</div>
        </div>
    </div>

    <div class="battle-container">
        <h1 id="win-text" class="win-message"></h1>
        <video id="arena-video" playsinline muted></video>
    </div>
    <div id="battle-status" class="p-3 text-uppercase text-center" style="color: var(--neon-green)">BAĞLANTI KURULUYOR...</div>
</div>

<script>
    const socket = io();
    const video = document.getElementById('arena-video');
    const overlay = document.getElementById('video-overlay');
    const winText = document.getElementById('win-text');

    socket.on('match-started', async (data) => {
        const opponent = data.players.find(p => p.nick !== "<%= user.nickname %>");
        overlay.style.display = 'flex';
        
        // RAKİP BİLGİLERİ (.jpg)
        document.getElementById('opp-name').innerText = opponent.nick;
        document.getElementById('opp-img').src = `/caracter/profile/${opponent.animal}.jpg`;

        // 1. SEKANS: SENİN ATAĞIN (Animal1.mp4)
        await playVideo(`/caracter/move/<%= user.selectedAnimal %>/<%= user.selectedAnimal %>1.mp4`, "SENİN HAMLEN!");

        // 2. SEKANS: RAKİBİN ATAĞI (Animal1.mp4)
        await playVideo(`/caracter/move/${opponent.animal}/${opponent.animal}1.mp4`, "RAKİP HAMLESİ!");

        // 3. SEKANS: ZAFER FİNALİ (Animal.mp4)
        const winner = data.winner;
        const amIWinner = (winner.nick === "<%= user.nickname %>");
        
        await playFinal(winner.animal, amIWinner);
    });

    function playVideo(src, status) {
        return new Promise(res => {
            document.getElementById('battle-status').innerText = status;
            video.src = src;
            video.onended = res;
            video.onerror = () => { console.error("Video bulunamadı:", src); res(); };
            video.play().catch(e => res());
        });
    }

    async function playFinal(animal, amIWinner) {
        document.getElementById('battle-status').innerText = "FİNAL!";
        video.src = `/caracter/move/${animal}/${animal}.mp4`;
        video.onended = null;
        video.play();

        setTimeout(() => {
            winText.innerText = amIWinner ? "KAZANDIN!" : "KAYBETTİN!";
            winText.style.color = amIWinner ? "var(--neon-green)" : "var(--neon-red)";
            winText.style.display = "block";
        }, 2000);

        // 6 saniye sonra profile at
        setTimeout(() => { window.location.href = "/profil"; }, 6000);
    }
</script>
