<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL | Güvenli İkmal Terminali</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #050505; --card-bg: #0f0f0f; }
        body { 
            background: var(--dark-bg); 
            color: #fff; 
            font-family: 'Rajdhani', sans-serif; 
            padding: 40px 0;
            background-image: radial-gradient(circle at 50% 50%, #111 0%, #050505 100%);
        }

        .neon-text { color: var(--neon-green); text-shadow: 0 0 10px rgba(57, 255, 20, 0.5); font-family: 'Orbitron', sans-serif; }
        .neon-border { border: 1px solid var(--neon-green); box-shadow: 0 0 20px rgba(57, 255, 20, 0.1); border-radius: 20px; }

        /* Paket Kartları */
        .package-card {
            background: var(--card-bg);
            border: 1px solid #222;
            border-radius: 15px;
            transition: 0.3s all ease;
            cursor: pointer;
            position: relative;
        }
        .package-card:hover { 
            border-color: var(--neon-green); 
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        }
        .package-card.active { 
            border-color: var(--neon-green); 
            background: rgba(57, 255, 20, 0.05);
            box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
        }
        .package-card.active::after {
            content: '\f058';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            top: 10px;
            right: 10px;
            color: var(--neon-green);
        }

        .price-tag { font-size: 2.2rem; font-weight: 800; color: #fff; }
        .bpl-amount { color: var(--neon-green); font-size: 1.3rem; font-weight: bold; }
        
        /* Terminal Bölümü */
        .payment-terminal { background: #080808; padding: 30px; }
        .tx-input { 
            background: #000 !important; 
            border: 1px solid #333 !important; 
            color: var(--neon-green) !important; 
            font-family: monospace; 
            letter-spacing: 1px;
        }
        .tx-input:focus { border-color: var(--neon-green) !important; box-shadow: 0 0 10px rgba(57, 255, 20, 0.2); }
        
        .step-num { 
            width: 25px; height: 25px; background: var(--neon-green); color: #000; 
            display: inline-block; border-radius: 50%; font-weight: bold; 
            text-align: center; line-height: 25px; margin-right: 8px; font-size: 0.8rem;
        }
        
        .btn-verify {
            background: transparent; border: 1px solid var(--neon-green); color: var(--neon-green);
            padding: 15px; font-weight: bold; font-family: 'Orbitron', sans-serif;
            letter-spacing: 2px; transition: 0.4s;
        }
        .btn-verify:hover:not(:disabled) { 
            background: var(--neon-green); color: #000; box-shadow: 0 0 30px var(--neon-green); 
        }
        .btn-verify:disabled { opacity: 0.5; cursor: not-allowed; }

        code { color: #eee; font-size: 0.85rem; }
    </style>
</head>
<body>

<div class="container">
    <div class="text-center mb-5">
        <h1 class="neon-text fw-bold mb-2">BPL LOGISTICS & TERMINAL</h1>
        <p class="text-white-50 small">PAKET SEÇİMİ <i class="fas fa-chevron-right mx-2"></i> TRANSFER <i class="fas fa-chevron-right mx-2"></i> DOĞRULAMA</p>
    </div>

    <div class="row mb-5">
        <% 
            const packages = [ 
                {usd: 1, bpl: 100, note: 'KEŞİF PAKETİ'}, 
                {usd: 4, bpl: 500, note: '%20 BONUS'}, 
                {usd: 7, bpl: 1000, note: '%30 FIRSAT'}, 
                {usd: 33, bpl: 5000, note: 'MEGA ORDU'} 
            ]; 
        %>
        <% packages.forEach(pkg => { %>
            <div class="col-md-3 mb-4">
                <div class="package-card p-4 text-center h-100" onclick="selectPackage(this, <%= pkg.usd %>, <%= pkg.bpl %>)">
                    <div class="bpl-amount mb-2"><%= pkg.bpl.toLocaleString() %> BPL</div>
                    <div class="price-tag mb-2">$<%= pkg.usd %></div>
                    <span class="badge bg-dark text-neon border border-secondary px-3"><%= pkg.note %></span>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="payment-terminal neon-border">
                <div class="row">
                    <div class="col-md-6 border-end border-secondary pe-md-4">
                        <h5 class="text-neon mb-4"><i class="fas fa-satellite-dish me-2"></i>TRANSFER TALİMATI</h5>
                        
                        <div class="mb-4">
                            <p class="small text-white-50 mb-1"><span class="step-num">1</span> Ağ Tipi:</p>
                            <span class="badge bg-danger px-3 py-2 fw-bold">BEP20 (BNB Smart Chain)</span>
                        </div>

                        <div class="mb-4">
                            <p class="small text-white-50 mb-1"><span class="step-num">2</span> Şirket Cüzdanı (USDT):</p>
                            <div class="d-flex align-items-center bg-black p-2 rounded border border-secondary">
                                <code id="walletAddr">0x9f63e92E8B316b7119b4586998966dF4446Dc754</code>
                                <button class="btn btn-sm btn-link text-neon ms-auto p-0" onclick="copyWallet()">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>

                        <div class="alert alert-warning bg-black border-warning text-warning small" style="--bs-bg-opacity: 0.1;">
                            <i class="fas fa-exclamation-triangle me-1"></i> Sadece <b>USDT</b> gönderin. Transfer sonrası borsa/cüzdanınızdan <b>TxID</b> kodunu alın.
                        </div>
                    </div>
                    
                    <div class="col-md-6 ps-md-4 mt-4 mt-md-0">
                        <h5 class="text-neon mb-4"><i class="fas fa-fingerprint me-2"></i>İŞLEM DOĞRULAMA</h5>
                        
                        <div class="mb-3">
                            <label class="small text-white-50 mb-1">Seçilen Yükleme:</label>
                            <input type="text" id="displayPackage" class="form-control tx-input" readonly value="Lütfen bir paket seçin...">
                        </div>

                        <div class="mb-4">
                            <label class="small text-white-50 mb-1">Transaction Hash (TxID):</label>
                            <input type="text" id="txidInput" class="form-control tx-input" placeholder="0xabc123...">
                            <small class="text-muted mt-1 d-block" style="font-size: 0.7rem;">Transferinizin blokzincir kimlik numarası.</small>
                        </div>
                        
                        <button onclick="submitPayment()" class="btn btn-verify w-100" id="verifyBtn">
                            <span id="btnText">PROTOKOLÜ BAŞLAT</span>
                            <span id="btnSpinner" class="spinner-border spinner-border-sm ms-2" style="display: none;"></span>
                        </button>

                        <div class="text-center mt-3">
                            <a href="/wallet" class="text-white-50 small text-decoration-none"><i class="fas fa-arrow-left me-1"></i> Cüzdana Geri Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    let selectedUSD = 0; 
    let selectedBPL = 0;

    function selectPackage(el, usd, bpl) {
        document.querySelectorAll('.package-card').forEach(c => c.classList.remove('active'));
        el.classList.add('active');
        selectedUSD = usd; 
        selectedBPL = bpl;
        document.getElementById('displayPackage').value = bpl.toLocaleString() + " BPL ( " + usd + " USDT )";
        
        // Mobil odaklanma için hafif kaydırma
        if(window.innerWidth < 768) {
            document.querySelector('.payment-terminal').scrollIntoView({ behavior: 'smooth' });
        }
    }

    function copyWallet() {
        const addr = document.getElementById('walletAddr').innerText;
        navigator.clipboard.writeText(addr).then(() => {
            Swal.fire({
                toast: true,
                position: 'top-end',
                icon: 'success',
                title: 'Adres Kopyalandı',
                showConfirmButton: false,
                timer: 2000,
                background: '#111',
                color: '#fff'
            });
        });
    }

    function submitPayment() {
        const txid = document.getElementById('txidInput').value.trim();
        const btn = document.getElementById('verifyBtn');
        const btnText = document.getElementById('btnText');
        const spinner = document.getElementById('btnSpinner');

        if (selectedUSD === 0) {
            return Swal.fire('Hata', 'Lütfen yüklemek istediğiniz paketi seçin.', 'warning');
        }
        if (txid.length < 20) {
            return Swal.fire('Hata', 'Lütfen geçerli bir TxID (Transaction Hash) girin.', 'warning');
        }

        // UI Kilitleme
        btn.disabled = true;
        btnText.innerText = "DOĞRULANIYOR...";
        spinner.style.display = 'inline-block';

        fetch('/verify-payment', {
            method: 'POST',
            headers: {'Content-Type': 'application/x-www-form-urlencoded'},
            // userId app.js session üzerinden alınacağı için body'den kaldırılabilir ancak garanti için eklendi
            body: `txid=${encodeURIComponent(txid)}&usd=${selectedUSD}&bpl=${selectedBPL}`
        })
        .then(r => r.json())
        .then(data => {
            if(data.status === 'success') {
                Swal.fire({
                    title: 'TALEBİNİZ ALINDI',
                    text: data.msg,
                    icon: 'success',
                    background: '#0a0a0a',
                    color: '#fff',
                    confirmButtonColor: '#39FF14'
                }).then(() => {
                    window.location.href = '/wallet';
                });
            } else {
                Swal.fire({
                    title: 'REDDEDİLDİ',
                    text: data.msg,
                    icon: 'error',
                    background: '#0a0a0a',
                    color: '#fff',
                    confirmButtonColor: '#ff003c'
                });
                btn.disabled = false;
                btnText.innerText = "TEKRAR DENE";
                spinner.style.display = 'none';
            }
        })
        .catch(err => {
            console.error(err);
            Swal.fire('Sistem Hatası', 'Sunucu ile bağlantı kurulamadı.', 'error');
            btn.disabled = false;
            btnText.innerText = "TEKRAR DENE";
            spinner.style.display = 'none';
        });
    }
</script>
</body>
</html>
