<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL CHAT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background: #050a0f; color: #fff; height: 100vh; display: flex; flex-direction: column; }
        .chat-box { flex: 1; border: 1px solid #00f2ff; margin: 10px; border-radius: 10px; display: flex; flex-direction: column; overflow: hidden; }
        #messages { flex: 1; padding: 15px; overflow-y: auto; }
        .user-sidebar { width: 250px; background: rgba(0,0,0,0.5); border-left: 1px solid #00f2ff; padding: 15px; }
        .msg { background: rgba(255,255,255,0.05); padding: 8px; border-radius: 5px; margin-bottom: 5px; }
    </style>
</head>
<body>
    <div class="d-flex justify-content-between p-3 border-bottom border-info">
        <span>BPL STRATEGY</span>
        <span class="text-warning"><%= user.bpl %> BPL</span>
    </div>

    <div class="d-flex flex-grow-1 overflow-hidden">
        <div class="chat-box">
            <div id="messages"></div>
            <div class="p-3 bg-black d-flex gap-2">
                <input type="text" id="m-input" class="form-control bg-transparent text-white" placeholder="Mesaj...">
                <button onclick="send()" class="btn btn-info">GÖNDER</button>
            </div>
        </div>
        <div class="user-sidebar">
            <h6 class="text-info text-center">AKTİF KOMUTANLAR</h6>
            <div id="user-list"></div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const socket = io();
        const myNick = "<%= user.nickname %>";

        function send() {
            const input = document.getElementById('m-input');
            if (input.value) {
                socket.emit('chat-message', { text: input.value });
                input.value = '';
            }
        }

        socket.on('new-chat-message', (data) => {
            const div = document.createElement('div');
            div.className = 'msg';
            div.innerHTML = `<b>${data.sender}:</b> ${data.text}`;
            document.getElementById('messages').appendChild(div);
        });

        socket.on('online-list', (users) => {
            const list = document.getElementById('user-list');
            list.innerHTML = '';
            users.forEach(u => {
                if(u === myNick) return;
                list.innerHTML += `<div class="p-2 border-bottom border-secondary d-flex justify-content-between">
                    ${u} <button class="btn btn-sm btn-danger" onclick="invite('${u}')">ARENA</button>
                </div>`;
            });
        });

        function invite(target) {
            socket.emit('invite-to-arena', target);
            Swal.fire('Bilgi', 'Davet gönderildi.', 'info');
        }

        socket.on('arena-invitation', (data) => {
            Swal.fire({
                title: 'DÜELLO!',
                text: `${data.from} seni düelloya davet ediyor!`,
                showCancelButton: true, confirmButtonText: 'KABUL ET'
            }).then(res => {
                if(res.isConfirmed) window.location.href = `/arena?room=${data.roomId}`;
            });
        });
    </script>
</body>
</html>
