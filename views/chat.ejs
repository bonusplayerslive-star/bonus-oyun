<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL | STRATEJÄ°K Ä°LETÄ°ÅÄ°M MERKEZÄ°</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    
    <style>
        :root { 
            --neon-blue: #00f3ff; --neon-red: #ff003c; --neon-green: #39FF14; 
            --terminal-dark: #0a0b0c; --panel-bg: rgba(10, 11, 12, 0.98);
        }

        body { 
            background: radial-gradient(circle at center, #1a1a1a 0%, #000 100%); 
            color: #e0e0e0; font-family: 'Rajdhani', sans-serif; 
            height: 100vh; overflow: hidden; display: flex; flex-direction: column; margin: 0;
        }

        /* Ãœst Durum Ã‡ubuÄŸu */
        .header-status { 
            height: 60px; padding: 0 20px; background: #000; border-bottom: 2px solid var(--neon-green);
            display: flex; align-items: center; justify-content: space-between; z-index: 100;
        }
        .status-item { font-family: 'Orbitron'; font-size: 0.8rem; letter-spacing: 1px; }

        /* Ana DÃ¼zen */
        .main-content { display: flex; flex: 1; height: calc(100vh - 140px); }

        /* SOL DÄ°KEY MENÃœ (Online Listesi) */
        .online-sidebar {
            width: 90px; background: rgba(0, 0, 0, 0.8); border-right: 1px solid #222;
            display: flex; flex-direction: column; align-items: center; padding: 15px 0;
            overflow-y: auto; scrollbar-width: none;
        }
        .online-sidebar::-webkit-scrollbar { display: none; }

        .user-node {
            display: flex; flex-direction: column; align-items: center; margin-bottom: 20px;
            cursor: pointer; transition: 0.3s; position: relative; width: 100%;
        }
        .user-node:hover { transform: scale(1.1); }
        
        .avatar-circle {
            width: 50px; height: 50px; border-radius: 50%; border: 2px solid var(--neon-blue);
            background: #111; display: flex; align-items: center; justify-content: center;
            position: relative; overflow: hidden;
        }
        .avatar-circle img { width: 100%; height: 100%; object-fit: cover; }
        
        .online-status {
            position: absolute; bottom: 2px; right: 2px; width: 12px; height: 12px;
            background: var(--neon-green); border-radius: 50%; border: 2px solid #000;
        }
        .node-name { font-size: 0.65rem; color: #aaa; margin-top: 5px; text-transform: uppercase; text-align: center; max-width: 80px; overflow: hidden; }

        /* Chat Penceresi */
        .chat-window { flex: 1; display: flex; flex-direction: column; position: relative; background: rgba(0,0,0,0.3); }
        #chatMessages { flex: 1; overflow-y: auto; padding: 20px; }
        
        .msg-entry { margin-bottom: 10px; padding: 8px 15px; background: rgba(255,255,255,0.03); border-left: 3px solid var(--neon-blue); }
        .sender-tag { color: #FFFF00; font-weight: bold; cursor: pointer; font-family: 'Orbitron'; font-size: 0.75rem; margin-right: 10px; }

        /* Aksiyon Paneli (Popup) */
        #userActionPanel { 
            display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
            width: 300px; background: var(--panel-bg); border: 1px solid var(--neon-blue);
            padding: 25px; z-index: 5000; box-shadow: 0 0 40px rgba(0,0,0,0.9);
        }

        /* Footer */
        .input-footer { height: 80px; background: #000; padding: 15px; border-top: 1px solid #222; }
        .terminal-input { background: #0a0a0a !important; border: 1px solid #333 !important; color: var(--neon-green) !important; font-family: 'Courier New', monospace; }
        .btn-send { background: var(--neon-green) !important; color: #000 !important; font-weight: bold; padding: 0 25px; }

        @media (max-width: 768px) {
            .online-sidebar { width: 70px; }
            .avatar-circle { width: 40px; height: 40px; }
        }
    </style>
</head>
<body>

<div class="header-status">
    <div class="status-item text-muted">USER: <span class="val-neon"><%= user.nickname %></span></div>
    <div class="status-item text-muted">CREDITS: <span id="myBpl" class="text-warning"><%= user.bpl %></span> BPL</div>
    <div class="status-item text-muted">STATUS: <span id="peer-status" class="text-success small">AKTÄ°F</span></div>
</div>

<div class="main-content">
    <div class="online-sidebar" id="onlineUsersList">
        </div>

    <div class="chat-window">
        <div id="chatMessages">
            <div class="msg-entry">
                <span class="sender-tag">[SÄ°STEM]:</span>
                <span class="text-info">Komuta merkezi aktif. Online komutanlar soldaki menÃ¼de listelenir.</span>
            </div>
        </div>
    </div>
</div>

<div id="userActionPanel">
    <h5 id="selectedUserLabel">HEDEF SEÃ‡Ä°LDÄ°</h5>
    <button onclick="sendGift(selectedUser)" id="giftBtn">ğŸ HEDÄ°YE GÃ–NDER</button>
    <button onclick="handleInvite(selectedUser, 'arena', 50)" id="fightBtn">âš”ï¸ ARENA DÃœELLO</button>
    <button onclick="handleInvite(selectedUser, 'meeting', 30)" id="meetBtn">ğŸ›ï¸ Ã–ZEL ODA</button>
    <button onclick="closePanel()" class="btn-close-panel">KAPAT</button>
</div>

<div class="input-footer">
    <form id="chatForm" onsubmit="return false;">
        <div class="input-group">
            <input type="text" id="messageInput" class="form-control terminal-input" placeholder="MesajÄ±nÄ±zÄ± yazÄ±n..." autocomplete="off">
            <button onclick="sendMessage()" class="btn btn-send"><i class="fas fa-bolt me-2"></i>GÃ–NDER</button>
        </div>
    </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>

<script>
    const socket = io(); 
    const myNick = "<%= user.nickname %>";
    let myBpl = <%= user.bpl %>;
    let selectedUser = "";

    // 1. ONLÄ°NE LÄ°STESÄ°NÄ° GÃœNCELLEME (SOL MENÃœ)
    socket.on('update-user-list', (users) => {
        const listContainer = document.getElementById('onlineUsersList');
        listContainer.innerHTML = ''; // Temizle

        users.forEach(u => {
            // Kendimizi listede gÃ¶stermiyoruz (isteÄŸe baÄŸlÄ±)
            if(u.nickname !== myNick) {
                const userDiv = document.createElement('div');
                userDiv.className = 'user-node';
                userDiv.onclick = () => openUserMenu(u.nickname);
                userDiv.innerHTML = `
                    <div class="avatar-circle">
                        <img src="/caracter/page/logo.jpeg" alt="user">
                        <div class="online-status"></div>
                    </div>
                    <div class="node-name">${u.nickname}</div>
                `;
                listContainer.appendChild(userDiv);
            }
        });
    });

    // 2. PANELÄ° AÃ‡
    function openUserMenu(nick) {
        selectedUser = nick;
        document.getElementById('selectedUserLabel').innerText = "HEDEF: " + nick;
        document.getElementById('userActionPanel').style.display = 'block';
        
        document.getElementById('giftBtn').onclick = () => sendGift(nick);
        document.getElementById('fightBtn').onclick = () => handleInvite(nick, 'arena', 50);
        document.getElementById('meetBtn').onclick = () => handleInvite(nick, 'meeting', 30);
    }

    function closePanel() { document.getElementById('userActionPanel').style.display = 'none'; }

    // 3. HEDÄ°YE SÄ°STEMÄ° (LÄ°MÄ°T VE VERGÄ° KONTROLLÃœ)
    function sendGift(nick) {
        Swal.fire({
            title: 'LOJÄ°STÄ°K TRANSFER',
            text: `${nick} komutanÄ±na gÃ¶nderilecek BPL miktarÄ±nÄ± girin. (%25 transfer Ã¼creti alÄ±nÄ±r)`,
            input: 'number',
            background: '#0a0b0c', color: '#fff',
            showCancelButton: true,
            confirmButtonText: 'TRANSFER ET'
        }).then((result) => {
            if (result.isConfirmed) {
                const amount = parseInt(result.value);
                if(amount > 0) {
                    // Chat sayfasÄ±ndaki anlÄ±k bakiye kontrolÃ¼
                    if(myBpl - amount < 5500) {
                        Swal.fire('Hata', 'Bakiyeniz 5500 BPL altÄ±na dÃ¼ÅŸemez!', 'error');
                    } else {
                        socket.emit('gift-bpl', { to: nick, amount: amount });
                        closePanel();
                    }
                }
            }
        });
    }

    // 4. ARENA & MEETING DAVETÄ°
    function handleInvite(nick, type, cost) {
        if(myBpl < cost) {
            Swal.fire('Hata', 'Yetersiz bakiye!', 'error');
            return;
        }
        socket.emit('send-invite', { to: nick, type: type, cost: cost });
        closePanel();
    }

    // 5. DAVETÄ° ALMA VE YÃ–NLENDÄ°RME
    socket.on('receive-invite', (data) => {
        Swal.fire({
            title: data.type === 'arena' ? 'âš”ï¸ ARENA DÃœELLO!' : 'ğŸ›ï¸ Ã–ZEL ODA DAVETÄ°!',
            text: `${data.from} seni Ã§aÄŸÄ±rÄ±yor. Kabul ediyor musun?`,
            showCancelButton: true,
            confirmButtonText: 'KATIL',
            background: '#0a0a0a', color: '#fff'
        }).then((res) => {
            if(res.isConfirmed) {
                // Oda ismi davet edenin nickname'i ile aÃ§Ä±lÄ±r
                const roomName = data.from; 
                window.location.href = data.type === 'arena' ? `/arena?room=${roomName}` : `/meeting?room=${roomName}`;
            }
        });
    });

    // 6. MESAJLAÅMA
    function sendMessage() {
        const input = document.getElementById('messageInput');
        if(input.value.trim()) {
            socket.emit('chat-message', { text: input.value });
            input.value = '';
        }
    }

    socket.on('new-message', (data) => {
        const box = document.getElementById('chatMessages');
        const div = document.createElement('div');
        div.className = "msg-entry";
        div.innerHTML = `<span class="sender-tag" onclick="openUserMenu('${data.sender}')">${data.sender}:</span> 
                         <span class="text-light">${data.text}</span>`;
        box.appendChild(div);
        box.scrollTop = box.scrollHeight;
    });

    socket.on('update-bpl', (newBpl) => {
        myBpl = newBpl;
        document.getElementById('myBpl').innerText = newBpl;
    });

// 1. PANELÄ° KAPATAN YARDIMCI FONKSÄ°YON
function closePanel() {
    const panel = document.getElementById('userActionPanel');
    if (panel) {
        panel.style.display = 'none';
        // Panelin arkasÄ±ndaki karartmayÄ± (varsa) kaldÄ±rÄ±r
        console.log("Panel kapatÄ±ldÄ±."); 
    }
}

// 2. ANA DAVET/Ä°ÅLEM FONKSÄ°YONU
function handleInvite(nick, type, cost) {
    // Ã–nce bakiye kontrolÃ¼
    if(myBpl < cost) {
        Swal.fire({
            title: 'Yetersiz BPL!',
            text: `Bu iÅŸlem iÃ§in ${cost} BPL gerekiyor.`,
            icon: 'error',
            background: '#0a0a0a', color: '#fff'
        });
        return;
    }

    // SeÃ§im yapÄ±ldÄ±, ÅÄ°MDÄ° PANELÄ° KAPATIYORUZ
    closePanel(); 

    // Socket Ã¼zerinden isteÄŸi gÃ¶nder
    socket.emit('send-invite', { 
        to: nick, 
        type: type, 
        cost: cost 
    });

    // KullanÄ±cÄ±ya bilgi ver (Opsiyonel)
    const actionText = type === 'arena' ? 'DÃ¼ello daveti' : 'Ã–zel oda daveti';
    Swal.fire({
        toast: true,
        position: 'top-end',
        title: `${actionText} gÃ¶nderildi!`,
        showConfirmButton: false,
        timer: 2000,
        background: '#1a1a1a', color: var(--neon-blue)
    });
}

// 3. HEDÄ°YE GÃ–NDERME FONKSÄ°YONU
function sendGift(nick) {
    // Hediye butonuna basÄ±ldÄ±ÄŸÄ± an seÃ§im panelini kapatÄ±yoruz
    closePanel(); 

    Swal.fire({
        title: 'LOJÄ°STÄ°K TRANSFER',
        text: `${nick} iÃ§in miktar girin (%25 Vergi)`,
        input: 'number',
        showCancelButton: true,
        confirmButtonText: 'GÃ–NDER',
        background: '#0a0a0a', color: '#fff'
    }).then((result) => {
        if (result.isConfirmed) {
            const amount = parseInt(result.value);
            // Burada server-side kontrolÃ¼ tetikleyen socket yayÄ±nÄ±
            socket.emit('gift-bpl', { to: nick, amount: amount });
        }
    });
}


    document.getElementById('messageInput').addEventListener('keypress', (e) => { if (e.key === 'Enter') sendMessage(); });
</script>
</body>
</html>
