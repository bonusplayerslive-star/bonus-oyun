<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL | VIP KONSEY</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root { --gold: #ffd700; --gold-dark: #d4af37; --panel: #111; }
        body { background: #000; color: #fff; height: 100vh; display: flex; flex-direction: row; margin: 0; overflow: hidden; font-family: 'Cinzel', serif; }
        .video-sidebar { width: 180px; border-right: 2px solid var(--gold-dark); background: #0a0a0a; display: flex; flex-direction: column; gap: 15px; padding: 15px; overflow-y: auto; align-items: center; }
        @media (max-width: 768px) {
            body { flex-direction: column; }
            .video-sidebar { width: 100%; height: 140px; flex-direction: row; border-right: none; border-bottom: 2px solid var(--gold-dark); overflow-x: auto; overflow-y: hidden; padding: 10px; }
        }
        .v-slot { width: 100px; height: 100px; border: 3px solid var(--gold-dark); border-radius: 50%; overflow: hidden; position: relative; cursor: pointer; transition: 0.3s; background: #222; flex-shrink: 0; }
        .v-slot:hover { transform: scale(1.05); box-shadow: 0 0 15px var(--gold); }
        video { width: 100%; height: 100%; object-fit: cover; }
        .user-label { position: absolute; bottom: 0; width: 100%; background: rgba(0,0,0,0.8); color: var(--gold); font-size: 0.6rem; text-align: center; font-weight: bold; }
        .main-content { flex: 1; display: flex; flex-direction: column; min-height: 0; }
        #vip-chat { flex: 1; padding: 15px; overflow-y: auto; background: rgba(0,0,0,0.5); border-bottom: 1px solid #333; font-size: 0.9rem; }
        .input-bar { padding: 10px; background: #111; display: flex; align-items: center; gap: 8px; border-top: 1px solid var(--gold-dark); }
        #user-menu { position: fixed; display: none; background: #222; border: 1px solid var(--gold); z-index: 10000; min-width: 180px; border-radius: 4px; box-shadow: 0 4px 15px rgba(0,0,0,0.5); }
        .menu-item { padding: 12px 15px; cursor: pointer; color: #fff; font-size: 0.85rem; border-bottom: 1px solid #333; }
        .menu-item:hover { background: var(--gold-dark); color: #000; }
    </style>
</head>
<body>

<div class="video-sidebar" id="video-list">
    <div class="v-slot" id="slot-me" onclick="event.stopPropagation()">
        <video id="localVideo" autoplay muted playsinline></video>
        <div class="user-label">Sƒ∞Z</div>
    </div>
</div>

<div class="main-content">
    <div id="vip-chat"></div>
    <div class="input-bar">
        <div id="my-bpl-container" class="text-warning fw-bold text-nowrap">
            <span id="my-bpl"><%= user.bpl %></span> <small>BPL</small>
        </div>
        <input type="text" id="chat-input" class="form-control bg-dark text-white border-warning" placeholder="Mesaj yazƒ±n...">
        <button onclick="sendMessage()" class="btn btn-warning fw-bold">G√ñNDER</button>
    </div>
</div>

<div id="user-menu">
    <div id="menu-target-name" class="text-center py-2 border-bottom border-warning text-warning fw-bold" style="font-size: 0.75rem;"></div>
    <div class="menu-item" onclick="executeAction('gift', 50)">üéÅ 50 BPL HEDƒ∞YE</div>
    <div class="menu-item" onclick="executeAction('gift', 100)">üéÅ 100 BPL HEDƒ∞YE</div>
    <div class="menu-item" onclick="executeAction('gift', 150)">üéÅ 150 BPL HEDƒ∞YE</div>
    <div class="menu-item" onclick="executeAction('arena')">‚öîÔ∏è ARENA DAVETƒ∞</div>
    <div class="menu-item text-danger text-center fw-bold" onclick="hideMenu()">KAPAT</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>

<script>
    const myNick = "<%= user.nickname %>";
    const currentRoom = new URLSearchParams(window.location.search).get('room') || "GENEL_KONSEY";
    const socket = io(window.location.origin, { query: { nickname: myNick } });
    const myPeer = new Peer(); 
    let myStream;
    let selectedUserNick = null;

    // Kamera ba≈ülatma
    async function initCamera() {
        try {
            myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            document.getElementById('localVideo').srcObject = myStream;
        } catch (e) { 
            appendMsg("Sƒ∞STEM", "‚ö†Ô∏è Kamera veya Mikrofon eri≈üimi reddedildi."); 
        }
    }

    myPeer.on('open', id => {
        socket.emit('join-meeting', { roomId: currentRoom, peerId: id });
    });

    myPeer.on('call', call => {
        call.answer(myStream);
        call.on('stream', userStream => addVideoSlot(call.peer, userStream, "KATILIMCI"));
    });

    socket.on('user-connected', (data) => {
        const { id, nickname } = data;
        setTimeout(() => {
            const call = myPeer.call(id, myStream);
            call.on('stream', userStream => addVideoSlot(id, userStream, nickname));
        }, 1500);
    });

    function addVideoSlot(peerId, stream, nick) {
        if (document.getElementById(peerId)) return;
        const slot = document.createElement('div');
        slot.className = "v-slot";
        slot.id = peerId;
        slot.onclick = (e) => { e.stopPropagation(); showMenu(e, nick); };

        const video = document.createElement('video');
        video.srcObject = stream;
        video.autoplay = true;
        video.playsInline = true;

        const label = document.createElement('div');
        label.className = "user-label";
        label.innerText = nick;

        slot.append(video, label);
        document.getElementById('video-list').append(slot);
    }

    socket.on('user-disconnected', peerId => {
        const el = document.getElementById(peerId);
        if(el) el.remove();
    });

    function showMenu(e, nick) {
        if(nick === "Sƒ∞Z" || nick === myNick) return;
        selectedUserNick = nick;
        const menu = document.getElementById('user-menu');
        document.getElementById('menu-target-name').innerText = nick.toUpperCase();
        
        menu.style.display = 'block';
        let posX = e.pageX;
        let posY = e.pageY;
        if (posX + 180 > window.innerWidth) posX -= 180;
        if (posY + 200 > window.innerHeight) posY -= 200;

        menu.style.left = posX + 'px';
        menu.style.top = posY + 'px';
    }

    function hideMenu() { document.getElementById('user-menu').style.display = 'none'; }

    function executeAction(action, amount = 0) {
        const currentBpl = parseInt(document.getElementById('my-bpl').innerText);

        if(action === 'gift') {
            if (currentBpl < 5500 || (currentBpl - amount) < 5500) {
                appendMsg("Sƒ∞STEM", "‚ö†Ô∏è ƒ∞≈ülem reddedildi. Bakiyeniz 5500 BPL √ºzerinde kalmalƒ±dƒ±r.");
            } else {
                socket.emit('send-gift-vip', { 
                    targetNick: selectedUserNick, 
                    amount: amount, 
                    room: currentRoom 
                });
            }
        } else if(action === 'arena') {
            appendMsg("Sƒ∞STEM", `‚öîÔ∏è ${selectedUserNick} Arena'ya davet edildi!`);
            window.location.href = `/arena?target=${selectedUserNick}`;
        }
        hideMenu();
    }

    function sendMessage() {
        const input = document.getElementById('chat-input');
        if(!input.value.trim()) return;
        socket.emit('chat-message', { room: currentRoom, text: input.value });
        input.value = '';
    }

    socket.on('new-message', d => appendMsg(d.sender, d.text));
    
    socket.on('update-bpl', (newBpl) => {
        document.getElementById('my-bpl').innerText = newBpl;
    });

    function appendMsg(s, t) {
        const chat = document.getElementById('vip-chat');
        const color = s === "Sƒ∞STEM" ? "#ff4444" : "var(--gold)";
        chat.innerHTML += `<div><b style="color:${color}">${s}:</b> <span style="color:#ccc">${t}</span></div>`;
        chat.scrollTop = chat.scrollHeight;
    }

    document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendMessage(); });
    window.onclick = () => hideMenu();
    initCamera();
</script>
</body>
</html>
