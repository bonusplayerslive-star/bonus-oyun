<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>BPL | VIP KONSEY</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    
    <style>
        :root { 
            --gold: #ffd700; 
            --gold-dark: #d4af37; 
            --panel-dark: #0a0a0a;
            --neon-green: #39FF14;
        }

        body { 
            background: #000; 
            color: #fff; 
            height: 100dvh; 
            display: flex; 
            flex-direction: row; 
            margin: 0; 
            overflow: hidden; 
            font-family: 'Rajdhani', sans-serif; 
        }

        /* SIDEBAR / VIDEO ALANI */
        .video-sidebar { 
            width: 180px; 
            border-right: 2px solid var(--gold-dark); 
            background: var(--panel-dark); 
            display: flex; 
            flex-direction: column; 
            gap: 15px; 
            padding: 15px; 
            overflow-y: auto; 
            align-items: center; 
            box-shadow: 5px 0 15px rgba(0,0,0,0.5);
            z-index: 10;
        }

        @media (max-width: 768px) {
            body { flex-direction: column; }
            .video-sidebar { 
                width: 100%; 
                height: 130px; 
                flex-direction: row; 
                border-right: none; 
                border-bottom: 2px solid var(--gold-dark); 
                overflow-x: auto; 
                overflow-y: hidden; 
                padding: 10px; 
                gap: 10px;
            }
        }

        .v-slot { 
            width: 100px; 
            height: 100px; 
            border: 2px solid var(--gold-dark); 
            border-radius: 12px; 
            overflow: hidden; 
            position: relative; 
            cursor: pointer; 
            transition: 0.3s; 
            background: #222; 
            flex-shrink: 0; 
            box-shadow: 0 0 10px rgba(212, 175, 55, 0.2);
        }
        .v-slot:hover { transform: scale(1.05); border-color: var(--gold); }
        
        video { width: 100%; height: 100%; object-fit: cover; background: #000; }

        .user-label { 
            position: absolute; 
            bottom: 0; 
            width: 100%; 
            background: rgba(0,0,0,0.8); 
            color: var(--gold); 
            font-size: 0.65rem; 
            text-align: center; 
            font-family: 'Cinzel', serif;
            padding: 2px 0;
        }

        /* ANA ƒ∞√áERƒ∞K / SOHBET */
        .main-content { 
            flex: 1; 
            display: flex; 
            flex-direction: column; 
            min-height: 0; 
            background: radial-gradient(circle at center, #111 0%, #000 100%);
        }

        #vip-chat { 
            flex: 1; 
            padding: 20px; 
            overflow-y: auto; 
            font-size: 0.95rem; 
        }

        .input-bar { 
            padding: 15px; 
            background: #0a0a0a; 
            display: flex; 
            align-items: center; 
            gap: 10px; 
            border-top: 1px solid #333;
            padding-bottom: calc(15px + env(safe-area-inset-bottom));
        }

        .bpl-badge {
            background: rgba(255, 215, 0, 0.1);
            border: 1px solid var(--gold-dark);
            padding: 5px 12px;
            border-radius: 5px;
            font-family: 'Cinzel', serif;
        }

        /* SAƒû TIK / AKSƒ∞YON MEN√úS√ú */
        #user-menu { 
            position: fixed; 
            display: none; 
            background: #111; 
            border: 1px solid var(--gold); 
            z-index: 10000; 
            min-width: 200px; 
            border-radius: 8px; 
            box-shadow: 0 0 25px rgba(0,0,0,0.8); 
            overflow: hidden;
        }
        
        .menu-item { 
            padding: 12px 15px; 
            cursor: pointer; 
            color: #fff; 
            font-size: 0.85rem; 
            border-bottom: 1px solid #222;
            transition: 0.2s;
        }
        .menu-item:hover { background: var(--gold-dark); color: #000; font-weight: bold; }

        .sys-msg { color: #39FF14; font-weight: bold; font-size: 0.8rem; border-left: 2px solid #39FF14; padding-left: 8px; margin: 5px 0; }
    </style>
</head>
<body>

<div class="video-sidebar" id="video-list">
    <div class="v-slot" id="slot-me">
        <video id="localVideo" autoplay muted playsinline></video>
        <div class="user-label">Sƒ∞Z (KOMUTAN)</div>
    </div>
</div>

<div class="main-content">
    <div id="vip-chat">
        <div class="sys-msg">Sƒ∞STEM: VIP Konseyine ho≈ü geldiniz. Baƒülantƒ± g√ºvenli.</div>
    </div>
    
    <div class="input-bar">
        <div class="bpl-badge text-warning fw-bold text-nowrap">
            <span id="my-bpl"><%= user.bpl %></span> <small>BPL</small>
        </div>
        <input type="text" id="chat-input" class="form-control bg-dark text-white border-secondary" placeholder="Konseye hitap et..." autocomplete="off">
        <button onclick="sendMeetingMessage()" class="btn btn-warning fw-bold px-4">G√ñNDER</button>
    </div>
</div>

<div id="user-menu">
    <div id="menu-target-name" class="text-center py-2 bg-dark text-warning fw-bold border-bottom border-warning"></div>
    <div class="menu-item" onclick="executeAction('gift', 50)">üéÅ 50 BPL DESTEK</div>
    <div class="menu-item" onclick="executeAction('gift', 100)">üéÅ 100 BPL DESTEK</div>
    <div class="menu-item" onclick="executeAction('gift', 150)">üéÅ 150 BPL DESTEK</div>
    <div class="menu-item" onclick="executeAction('arena')">‚öîÔ∏è ARENA D√úELLOSU</div>
    <div class="menu-item text-danger text-center fw-bold bg-dark" onclick="hideMenu()">KAPAT</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    const myNick = "<%= user.nickname %>";
    // Oda ID'sini URL'den al yoksa GENEL_KONSEY kullan
    const currentRoom = new URLSearchParams(window.location.search).get('room') || "GENEL_KONSEY";
    const socket = io();
    const myPeer = new Peer(); 
    let myStream;
    let selectedUserNick = null;
    let myBpl = parseInt("<%= user.bpl %>");

    // Kamera ve Mikrofon Ba≈ülatma
    async function initCamera() {
        try {
            myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            document.getElementById('localVideo').srcObject = myStream;
        } catch (e) { 
            appendMsg("Sƒ∞STEM", "‚ö†Ô∏è Kamera eri≈üimi reddedildi. Sadece izleyicisin."); 
        }
    }

    myPeer.on('open', peerId => {
        // app.js'deki join-meeting dinleyicisine uygun g√∂nderim
        socket.emit('join-meeting', { roomId: currentRoom, peerId: peerId });
    });

    // Gelen aramayƒ± yanƒ±tla
    myPeer.on('call', call => {
        call.answer(myStream);
        call.on('stream', remoteStream => {
            // Arayan ki≈üinin peerId'sini kullanarak slot olu≈ütur
            addVideoSlot(call.peer, remoteStream, "KATILIMCI");
        });
    });

    // Yeni kullanƒ±cƒ± baƒülandƒ±ƒüƒ±nda onu ara
    socket.on('user-connected', (data) => {
        const { id, nickname } = data; // app.js'den gelen socket.id veya peerId
        appendMsg("Sƒ∞STEM", `üë§ ${nickname} konseye katƒ±ldƒ±.`);
        
        if (myStream && data.id !== socket.id) {
            // Biraz bekle (Peer'in hazƒ±r olmasƒ± i√ßin)
            setTimeout(() => {
                const call = myPeer.call(data.peerId, myStream);
                call.on('stream', remoteStream => {
                    addVideoSlot(data.peerId, remoteStream, nickname);
                });
            }, 1000);
        }
    });

    function addVideoSlot(peerId, stream, nick) {
        if (document.getElementById(peerId)) return;
        
        const slot = document.createElement('div');
        slot.className = "v-slot";
        slot.id = peerId;
        slot.onclick = (e) => { e.stopPropagation(); showMenu(e, nick); };

        const video = document.createElement('video');
        video.srcObject = stream;
        video.autoplay = true;
        video.playsInline = true;

        const label = document.createElement('div');
        label.className = "user-label";
        label.innerText = nick;

        slot.append(video, label);
        document.getElementById('video-list').append(slot);
    }

    socket.on('user-disconnected', peerId => {
        const el = document.getElementById(peerId);
        if(el) el.remove();
    });

    // SOHBET ƒ∞≈ûLEMLERƒ∞ (Meeting'e √ñzel)
    function sendMeetingMessage() {
        const input = document.getElementById('chat-input');
        const text = input.value.trim();
        if(!text) return;
        // app.js'deki send-meeting-message dinleyicisine g√∂nder
        socket.emit('send-meeting-message', { text: text });
        input.value = '';
    }

    // app.js'den gelen yeni konsey mesajƒ±
    socket.on('new-meeting-message', d => appendMsg(d.sender, d.text));

    // BPL G√ºncellemesi
    socket.on('update-bpl', (newBpl) => {
        myBpl = newBpl;
        document.getElementById('my-bpl').innerText = newBpl;
    });

    // AKSƒ∞YON MEN√úS√ú (Hediye/Arena)
    function showMenu(e, nick) {
        if(nick === "Sƒ∞Z (KOMUTAN)" || nick === myNick) return;
        selectedUserNick = nick;
        const menu = document.getElementById('user-menu');
        document.getElementById('menu-target-name').innerText = nick.toUpperCase();
        menu.style.display = 'block';
        
        let posX = e.clientX;
        let posY = e.clientY;
        if (posX + 200 > window.innerWidth) posX -= 200;
        if (posY + 250 > window.innerHeight) posY -= 250;
        menu.style.left = posX + 'px';
        menu.style.top = posY + 'px';
    }

    function hideMenu() { document.getElementById('user-menu').style.display = 'none'; }

    function executeAction(action, amount = 0) {
        if(action === 'gift') {
            // 5500 BPL VIP Kuralƒ±
            if (myBpl - amount < 5500) {
                Swal.fire({ icon: 'error', title: 'LIMIT', text: '5500 BPL altƒ±na d√º≈üemezsin!', background: '#111', color: '#fff' });
            } else {
                socket.emit('send-gift-vip', { targetNick: selectedUserNick, amount: amount, room: currentRoom });
            }
        } else if(action === 'arena') {
            window.location.href = `/arena?target=${selectedUserNick}`;
        }
        hideMenu();
    }

    function appendMsg(s, t) {
        const chat = document.getElementById('vip-chat');
        const div = document.createElement('div');
        div.className = "mb-2";
        div.innerHTML = `<b style="color:var(--gold)">${s}:</b> <span style="color:#eee">${t}</span>`;
        chat.appendChild(div);
        chat.scrollTop = chat.scrollHeight;
    }

    document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendMeetingMessage(); });
    window.onclick = () => hideMenu();
    
    initCamera();

// meeting.ejs i√ßindeki script kƒ±smƒ±na ekle:
const urlParams = new URLSearchParams(window.location.search);
const rawRoomId = urlParams.get('room');

// Eƒüer oda ID'si yoksa veya √ßok kƒ±saysa ana odaya y√∂nlendir veya hata ver
if (!rawRoomId || rawRoomId.length < 5) {
    Swal.fire('Hata', 'Ge√ßersiz Konsey Kodu!', 'error').then(() => window.location.href = '/chat');
}

const currentRoom = rawRoomId; // Backend zaten secureRoomId prefixini ekliyor.

</script>
</body>
</html>

