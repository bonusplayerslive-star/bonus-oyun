<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL BEŞGEN MASA | VIP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #0a0a0a; }
        body { background: var(--dark-bg); color: white; font-family: 'Segoe UI', sans-serif; height: 100vh; overflow: hidden; }

        .meeting-nav {
            background: rgba(0,0,0,0.8); border-bottom: 1px solid var(--neon-green);
            padding: 10px 20px; display: flex; justify-content: space-between; align-items: center;
        }
        .meeting-nav img { height: 40px; }

        .meeting-container { display: flex; height: calc(100vh - 65px); }
        
        /* Video Alanı (Beşgen Masa Dizilimi İçin) */
        .video-grid { flex: 3; background: #000; padding: 20px; display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 15px; overflow-y: auto; }
        .video-box { background: #1a1a1a; border: 1px solid #333; border-radius: 15px; position: relative; aspect-ratio: 16/9; }
        .video-box video { width: 100%; height: 100%; object-fit: cover; border-radius: 15px; }
        .user-label { position: absolute; bottom: 10px; left: 10px; background: rgba(0,0,0,0.7); padding: 2px 10px; border-radius: 5px; border-left: 3px solid var(--neon-green); }

        .side-panel { flex: 1; border-left: 1px solid #222; background: #0f0f0f; display: flex; flex-direction: column; }
        .chat-area { flex: 1; overflow-y: auto; padding: 15px; font-size: 0.85rem; border-bottom: 1px solid #222; }
        .msg { margin-bottom: 8px; border-left: 2px solid var(--neon-green); padding-left: 8px; }

        .gift-section { padding: 15px; background: #141414; }
        .gift-btn { width: 48%; margin-bottom: 5px; font-size: 0.75rem; font-weight: bold; }

        .controls { position: fixed; bottom: 30px; left: 50%; transform: translateX(-50%); display: flex; gap: 20px; z-index: 100; }
        .control-btn { width: 55px; height: 55px; border-radius: 50%; border: none; background: #222; color: white; }
        .control-btn:hover { background: var(--neon-green); color: black; }
        .btn-end { background: #ff4444; }
    </style>
</head>
<body>

    <nav class="meeting-nav">
        <img src="/caracter/logo/logo.jpeg" onerror="this.src='/caracter/page/logo.jpeg'">
        <div class="small text-info">MASA ID: <%= roomId %></div>
        <div class="text-success fw-bold">BAKİYE: <span id="user-bpl"><%= user.bpl %></span> BPL</div>
    </nav>

    <div class="meeting-container">
        <div class="video-grid" id="video-grid">
            <div class="video-box">
                <video id="my-video" muted autoplay playsinline></video>
                <div class="user-label">Siz (<%= user.nickname %>)</div>
            </div>
            </div>

        <div class="side-panel">
            <div class="p-2 bg-dark text-center text-neon small">MASA SOHBETİ</div>
            <div class="chat-area" id="chat-messages"></div>

            <div class="gift-section">
                <input type="text" id="target-user" class="form-control form-control-sm bg-dark text-white border-secondary mb-2" placeholder="Kime? (Nickname)">
                <div class="d-flex flex-wrap justify-content-between">
                    <button class="btn btn-outline-warning gift-btn" onclick="sendGift(50)">50 BPL</button>
                    <button class="btn btn-outline-info gift-btn" onclick="sendGift(200)">200 BPL</button>
                    <button class="btn btn-outline-danger gift-btn" onclick="sendGift(500)">500 BPL</button>
                    <button class="btn btn-outline-success gift-btn" onclick="challengeUser()">SAVAŞ</button>
                </div>
                <div class="input-group mt-2">
                    <input type="text" id="chat-input" class="form-control bg-dark text-white border-secondary" placeholder="Mesaj...">
                    <button class="btn btn-success" onclick="sendMessage()"><i class="fas fa-paper-plane"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="controls">
        <button class="control-btn" onclick="toggleMic()"><i class="fas fa-microphone" id="mic-icon"></i></button>
        <button class="control-btn" onclick="toggleCam()"><i class="fas fa-video" id="cam-icon"></i></button>
        <button class="control-btn btn-end" onclick="location.href='/profil'"><i class="fas fa-phone-slash"></i></button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const nickname = "<%= user.nickname %>";
        const roomId = "<%= roomId %>";
        const myId = "<%= user._id %>";
        let myStream;

        // 1. Kamera Başlat
        navigator.mediaDevices.getUserMedia({ video: true, audio: true }).then(stream => {
            myStream = stream;
            document.getElementById('my-video').srcObject = stream;
        }).catch(err => alert("Kamera izni verilmedi!"));

        // 2. Odaya Kaydol ve Katıl
        socket.emit('register-user', { id: myId, nickname: nickname });
        socket.emit('join-room', { roomId: roomId, nickname: nickname });

        // 3. Mesajlaşma
        function sendMessage() {
            const input = document.getElementById('chat-input');
            if(input.value) {
                socket.emit('chat-message', { nickname, message: input.value, room: roomId });
                input.value = '';
            }
        }

        socket.on('new-message', (data) => {
            const chat = document.getElementById('chat-messages');
            chat.innerHTML += `<div class="msg"><b>${data.sender}:</b> ${data.text}</div>`;
            chat.scrollTop = chat.scrollHeight;
        });

        // 4. Hediye Gönderme (Backend Entegrasyonlu)
        function sendGift(amount) {
            const target = document.getElementById('target-user').value;
            if(!target) { alert("Lütfen alıcı nickname yazın!"); return; }
            
            socket.emit('send-gift', { 
                userId: myId,
                to: target, 
                amount: amount, 
                room: roomId 
            });
        }

        socket.on('gift-result', (data) => {
            if(data.newBalance !== undefined) {
                document.getElementById('user-bpl').innerText = data.newBalance;
            }
            alert(data.message);
        });

        // 5. Meydan Okuma
        function challengeUser() {
            const target = document.getElementById('target-user').value;
            if(target) {
                socket.emit('challenge-player', { targetNickname: target });
                alert(target + " kullanıcısına meydan okundu!");
            } else {
                alert("Kime meydan okuyacağınızı yazın!");
            }
        }

        // Kontroller
        function toggleMic() {
            const audioTrack = myStream.getAudioTracks()[0];
            audioTrack.enabled = !audioTrack.enabled;
            document.getElementById('mic-icon').className = audioTrack.enabled ? 'fas fa-microphone' : 'fas fa-microphone-slash';
        }

        function toggleCam() {
            const videoTrack = myStream.getVideoTracks()[0];
            videoTrack.enabled = !videoTrack.enabled;
            document.getElementById('cam-icon').className = videoTrack.enabled ? 'fas fa-video' : 'fas fa-video-slash';
        }
    </script>
</body>
</html>
