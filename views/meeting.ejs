<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL | VIP KONSEY</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root { --gold: #ffd700; --gold-dark: #d4af37; }
        body { background: #000; color: #fff; height: 100vh; overflow: hidden; font-family: 'Orbitron', sans-serif; }
        
        /* KONSEY MASASI DÜZENİ */
        .council-table {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* 3 sütunlu masa düzeni */
            gap: 20px;
            padding: 40px;
            height: 70vh;
            align-items: center; justify-items: center;
        }

        .v-slot { 
            width: 200px; height: 200px; 
            border: 4px solid var(--gold-dark); 
            border-radius: 50%; 
            overflow: hidden; 
            position: relative;
            box-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
            background: #111;
        }
        
        /* Lider Slotu (Ortada ve daha büyük) */
        .v-slot.leader { border-color: #fff; width: 240px; height: 240px; box-shadow: 0 0 30px var(--gold); }

        video { width: 100%; height: 100%; object-fit: cover; }
        .user-label { 
            position: absolute; bottom: 0; width: 100%; 
            background: rgba(0,0,0,0.8); color: var(--gold); 
            font-size: 0.8rem; text-align: center; padding: 5px 0;
        }

        /* ALT PANEL: CHAT */
        .bottom-panel {
            height: 30vh; background: rgba(15,15,15,0.95);
            border-top: 2px solid var(--gold-dark);
            display: flex; flex-direction: column;
        }
        #vip-chat { flex: 1; overflow-y: auto; padding: 15px; font-size: 0.9rem; }
        .input-bar { padding: 10px; background: #000; display: flex; gap: 10px; }
    </style>
</head>
<body>

<div class="council-table" id="video-grid">
    <div class="v-slot" id="slot-me">
        <video id="localVideo" autoplay muted playsinline></video>
        <div class="user-label">SİZ (<%= user.nickname %>)</div>
    </div>
</div>

<div class="bottom-panel">
    <div id="vip-chat"></div>
    <div class="input-bar">
        <span class="text-warning align-self-center mx-3 fw-bold"><%= user.bpl %> BPL</span>
        <input type="text" id="chat-input" class="form-control bg-dark text-white border-warning" placeholder="Konsey kararlarını yazın...">
        <button onclick="sendMessage()" class="btn btn-warning fw-bold px-4">BİLDİR</button>
    </div>
</div>
<div id="council-list" style="position:fixed; right:20px; top:80px; width:150px; background:rgba(0,0,0,0.8); border:1px solid var(--gold); padding:10px; border-radius:5px; z-index:100;">
    <h6 style="color:var(--gold); font-size:0.7rem; border-bottom:1px solid #333; padding-bottom:5px;">KONSEY ÜYELERİ</h6>
    <div id="member-names" style="font-size:0.75rem; color:#fff;">
        </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>

<script>
    const myNick = "<%= user.nickname %>";
    const params = new URLSearchParams(window.location.search);
    const currentRoom = params.get('room');
    
    // Soket Bağlantısı
    const socket = io(); 
    const myPeer = new Peer();
    let myStream;

    // Kamera ve Mikrofonu Zorla Aç
    async function initCouncil() {
        try {
            myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            document.getElementById('localVideo').srcObject = myStream;
            
            myPeer.on('open', id => {
                socket.emit('join-meeting', currentRoom, id, myNick);
            });
        } catch (e) {
            alert("KONSEY KURALLARI: Kamera ve Mikrofon açılmadan masaya oturamazsınız!");
            window.location.href = "/chat";
        }
    }

    // Gelen Aramayı Cevapla
    myPeer.on('call', call => {
        call.answer(myStream);
        call.on('stream', userStream => {
            addVideoSlot(call.peer, userStream, "KATILIMCI");
        });
    });

    // Yeni Biri Gelince Onu Ara
    socket.on('user-connected', (peerId, nick) => {
        const slots = document.querySelectorAll('.v-slot').length;
        if(slots >= 5) {
            console.log("Masa dolu, katılım engellendi.");
            return;
        }
        
        const call = myPeer.call(peerId, myStream);
        call.on('stream', userStream => {
            addVideoSlot(peerId, userStream, nick);
        });
        appendMsg("SİSTEM", `${nick} masaya oturdu.`);
    });

    function addVideoSlot(peerId, stream, nick) {
        if (document.getElementById(peerId)) return;

        const slot = document.createElement('div');
        slot.className = "v-slot";
        slot.id = peerId;

        const video = document.createElement('video');
        video.srcObject = stream;
        video.autoplay = true;
        video.playsInline = true;

        const label = document.createElement('div');
        label.className = "user-label";
        label.innerText = nick;

        slot.append(video, label);
        document.getElementById('video-grid').append(slot);
    }

    // Lider Çıkınca Herkesi Gönder
    socket.on('room-closed', (msg) => {
        alert(msg);
        window.location.href = "/chat";
    });

    socket.on('user-disconnected', peerId => {
        const el = document.getElementById(peerId);
        if(el) el.remove();
    });

   function sendMessage() {
    const input = document.getElementById('chat-input');
    if(!input.value) return;
    // currentRoom değişkeni URL'den çekilen oda adıdır
    socket.emit('chat-message', { room: currentRoom, text: input.value });
    input.value = '';
}
    socket.on('new-message', d => appendMsg(d.sender, d.text));

    function appendMsg(s, t) {
        const chat = document.getElementById('vip-chat');
        chat.innerHTML += `<div><b style="color:var(--gold)">${s}:</b> <span class="text-white">${t}</span></div>`;
        chat.scrollTop = chat.scrollHeight;
    }

    initCouncil();
</script>
</body>
</html>


