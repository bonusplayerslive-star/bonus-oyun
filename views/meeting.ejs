<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>BPL | STRATEJİK OPERASYON MERKEZİ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    <style>
        :root { --neon-turq: #00f2ff; --neon-red: #ff004c; --bg-dark: #050a0f; }
        
        body { 
            background: var(--bg-dark); color: #fff; height: 100vh; margin: 0; 
            font-family: 'Rajdhani', sans-serif; overflow: hidden;
            display: flex; flex-direction: column;
            padding: env(safe-area-inset-top) 5px env(safe-area-inset-bottom) 5px;
        }

        /* Üst Panel */
        .top-nav { 
            height: 60px; border: 1px solid var(--neon-turq); border-radius: 10px;
            margin: 5px; background: rgba(0, 242, 255, 0.05);
            display: flex; align-items: center; padding: 0 15px; justify-content: space-between;
            box-shadow: 0 0 10px rgba(0, 242, 255, 0.2);
        }

        .master-layout { flex: 1; display: grid; grid-template-columns: 280px 1fr 300px; gap: 10px; padding: 5px; overflow: hidden; }

        /* Video Alanları */
        .video-sidebar { 
            background: rgba(0,0,0,0.5); border: 1px solid rgba(0,242,255,0.3); 
            border-radius: 15px; padding: 10px; overflow-y: auto; display: flex; flex-direction: column; gap: 10px;
        }
        .v-slot { 
            width: 100%; aspect-ratio: 16/9; border-radius: 10px; border: 1px solid #333; 
            position: relative; background: #000; overflow: hidden;
        }
        .v-slot.active-host { border: 2px solid var(--neon-turq); box-shadow: 0 0 15px var(--neon-turq); }
        video { width: 100%; height: 100%; object-fit: cover; -webkit-transform: scaleX(-1); transform: scaleX(-1); }

        /* Sunum / Ana Alan */
        .main-display { 
            border: 1px solid rgba(0,242,255,0.3); border-radius: 15px;
            background: radial-gradient(circle, #0a1520 0%, #000 100%);
            display: flex; align-items: center; justify-content: center; position: relative;
        }

        /* Sağ Panel: VIP Chat */
        .chat-sidebar { 
            border: 1px solid rgba(0,242,255,0.3); border-radius: 15px;
            background: rgba(0,0,0,0.8); display: flex; flex-direction: column;
        }
        .chat-messages { flex: 1; overflow-y: auto; padding: 10px; font-size: 0.9rem; }
        .msg-line { margin-bottom: 8px; border-bottom: 1px solid rgba(255,255,255,0.05); }
        .msg-nick { color: var(--neon-turq); font-weight: bold; }

        /* iOS Uyumlu Inputlar */
        .neon-input { 
            background: transparent !important; border: 1px solid var(--neon-turq) !important;
            color: #fff !important; border-radius: 20px; font-size: 14px;
        }

        /* VIP Buton */
        .btn-vip { 
            background: var(--neon-red); border: none; color: #fff; 
            box-shadow: 0 0 10px var(--neon-red); border-radius: 20px; font-family: 'Orbitron';
        }

        /* Context Menu */
        #user-menu {
            position: fixed; display: none; background: #0a1520; border: 1px solid var(--neon-turq);
            border-radius: 8px; z-index: 1000; width: 160px; box-shadow: 0 0 20px #000;
        }
        .menu-item { padding: 10px; cursor: pointer; font-size: 13px; border-bottom: 1px solid #111; color: #fff; }
        .menu-item:hover { background: var(--neon-turq); color: #000; }

        @media (max-width: 992px) { .master-layout { grid-template-columns: 1fr; } .video-sidebar, .chat-sidebar { display: none; } }
    </style>
</head>
<body>

<nav class="top-nav">
    <div style="font-family:'Orbitron'; color:var(--neon-turq); font-size: 14px;">
        <i class="fas fa-microchip me-2"></i> <span id="room-name">YÜKLENİYOR...</span>
    </div>
    <div class="d-flex gap-2">
        <button id="mic-btn" onclick="toggleMic()" class="btn btn-outline-info btn-sm rounded-pill"><i class="fas fa-microphone"></i></button>
        <button id="vid-btn" onclick="toggleVid()" class="btn btn-outline-info btn-sm rounded-pill"><i class="fas fa-video"></i></button>
        <button onclick="exitRoom()" class="btn btn-danger btn-sm rounded-pill"><i class="fas fa-times"></i></button>
    </div>
</nav>

<div class="master-layout">
    <div class="video-sidebar" id="video-grid">
        <div class="v-slot active-host" id="local-slot">
            <video id="local-video" autoplay muted playsinline></video>
            <div style="position:absolute; bottom:5px; left:5px; background:rgba(0,0,0,0.6); font-size:10px; padding:2px 5px;">SEN</div>
        </div>
    </div>

    <div class="main-display">
        <div class="text-center">
            <i class="fas fa-user-secret fa-4x mb-3" style="color:var(--neon-turq); opacity: 0.2;"></i>
            <div id="status-text" class="small text-muted">DİĞER KOMUTANLAR BEKLENİYOR...</div>
        </div>
    </div>

    <div class="chat-sidebar">
        <div class="p-2 text-center border-bottom border-info" style="font-family:'Orbitron'; font-size:12px; color:var(--neon-turq)">VIP TERMINAL</div>
        <div class="chat-messages" id="meeting-chat"></div>
        <div class="p-2 border-top border-info">
            <div class="input-group mb-2">
                <input type="text" id="m-input" class="form-control form-control-sm neon-input" placeholder="Mesaj...">
                <button onclick="sendMsg()" class="btn btn-sm btn-vip"><i class="fas fa-paper-plane"></i></button>
            </div>
            <div class="input-group">
                <input type="text" id="invite-nick" class="form-control form-control-sm neon-input" placeholder="Nick...">
                <button onclick="inviteUser()" class="btn btn-sm btn-info rounded-end">DAVET</button>
            </div>
        </div>
    </div>
</div>

<div id="user-menu">
    <div id="menu-title" class="p-2 text-center small border-bottom border-info text-info"></div>
    <div class="menu-item" onclick="handleAction('gift')"><i class="fas fa-gift me-2"></i>Hediye (BPL)</div>
    <div class="menu-item text-danger" id="kick-opt" onclick="handleAction('kick')"><i class="fas fa-user-slash me-2"></i>At</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    const socket = io();
    const myNick = "<%= user.nickname %>";
    const myBpl = parseInt("<%= user.bpl %>");
    const params = new URLSearchParams(window.location.search);
    const roomID = params.get('room') || 'global';
    const role = params.get('role') || 'guest';
    const isHost = (role === 'host');

    document.getElementById('room-name').innerText = roomID.toUpperCase() + " SEKTÖRÜ";

    let localStream;
    let peer = new Peer();
    let selectedTarget = null;

    async function init() {
        try {
            localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            document.getElementById('local-video').srcObject = localStream;
        } catch (e) {
            Swal.fire("Kamera Hatası", "Kamera veya mikrofon izni verilmedi.", "error");
        }
    }

    peer.on('open', id => {
        socket.emit('join-meeting', { roomId: roomID, peerId: id, nickname: myNick });
    });

    socket.on('user-connected', data => {
        const call = peer.call(data.peerId, localStream, { metadata: { nickname: myNick } });
        call.on('stream', remoteStream => addVideo(data.peerId, remoteStream, data.nickname));
    });

    peer.on('call', call => {
        call.answer(localStream);
        call.on('stream', remoteStream => addVideo(call.peer, remoteStream, call.metadata?.nickname || "MİSAFİR"));
    });

    function addVideo(id, stream, nick) {
        if (document.getElementById(id)) return;
        const slot = document.createElement('div');
        slot.className = "v-slot"; slot.id = id;
        slot.onclick = (e) => openMenu(e, nick);
        const video = document.createElement('video');
        video.srcObject = stream; video.autoplay = true; video.setAttribute('playsinline', ''); 
        const tag = document.createElement('div');
        tag.className = "p-1 bg-dark text-info";
        tag.style = "position:absolute; bottom:0; font-size:10px; width:100%";
        tag.innerText = nick;
        slot.append(video, tag);
        document.getElementById('video-grid').append(slot);
    }

    // --- HEDİYE VE KRİTİK LİMİT SİSTEMİ ---
    async function handleAction(type) {
        if (type === 'gift') {
            // KRİTİK KONTROL 1: 5500 BPL Alt Limiti
            if (myBpl < 5500) {
                return Swal.fire("VIP ENGELİ", "Hediye göndermek için bakiyen en az 5500 BPL olmalıdır!", "warning");
            }

            const { value: amount } = await Swal.fire({
                title: 'Hediye Miktarı',
                text: '%30 Komisyon Kesilecektir',
                input: 'number',
                background: '#0a1520', color: '#fff',
                confirmButtonColor: '#00f2ff',
                showCancelButton: true
            });

            if (amount) {
                const totalCost = parseInt(amount);
                // Burada %30 kesinti backend'de yapılacak, kullanıcıyı bilgilendiriyoruz
                socket.emit('send-gift-bpl', { to: selectedTarget, amount: totalCost });
            }
        } else if (type === 'kick' && isHost) {
            socket.emit('host-action', { action: 'kick', targetNick: selectedTarget, room: roomID });
        }
    }

    // Socket ve Diğer Fonksiyonlar
    function sendMsg() {
        const input = document.getElementById('m-input');
        if (input.value.trim()) {
            socket.emit('meeting-message', { room: roomID, text: input.value });
            input.value = "";
        }
    }

    socket.on('new-meeting-message', d => {
        const chat = document.getElementById('meeting-chat');
        chat.innerHTML += `<div class="msg-line"><span class="msg-nick">${d.sender}:</span> ${d.text}</div>`;
        chat.scrollTop = chat.scrollHeight;
    });

    function openMenu(e, nick) {
        e.stopPropagation();
        selectedTarget = nick;
        const menu = document.getElementById('user-menu');
        document.getElementById('menu-title').innerText = nick;
        document.getElementById('kick-opt').style.display = isHost ? 'block' : 'none';
        menu.style.display = 'block'; menu.style.left = e.clientX + 'px'; menu.style.top = e.clientY + 'px';
    }

    function toggleMic() {
        const track = localStream.getAudioTracks()[0];
        track.enabled = !track.enabled;
        document.getElementById('mic-btn').classList.toggle('btn-danger', !track.enabled);
    }

    function toggleVid() {
        const track = localStream.getVideoTracks()[0];
        track.enabled = !track.enabled;
        document.getElementById('vid-btn').classList.toggle('btn-danger', !track.enabled);
    }

    function exitRoom() { window.location.href = "/chat"; }
    window.onclick = () => document.getElementById('user-menu').style.display = 'none';
    
    init();
</script>
</body>
</html>
