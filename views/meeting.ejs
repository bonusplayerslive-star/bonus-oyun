<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>BPL | STRATEJİK OPERASYON MERKEZİ</title>
    <link rel="stylesheet" href="/css/style.css"> <style>
        #video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            grid-auto-rows: 300px;
            gap: 10px;
            padding: 20px;
        }
        .video-box {
            position: relative;
            background: #000;
            border: 2px solid #00ffcc;
            border-radius: 8px;
            overflow: hidden;
        }
        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .name-tag {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: #00ffcc;
            padding: 2px 8px;
            font-size: 12px;
            border-radius: 4px;
        }
    </style>
</head>
<body>

    <div id="video-grid"></div>

    <div class="terminal-chat">
        <div id="meeting-messages" style="height: 200px; overflow-y: auto; border: 1px solid #333; margin-bottom: 10px; color: #fff;"></div>
        <input type="text" id="meeting-input" placeholder="Mesaj yazın...">
        <button onclick="sendMeetingMessage()">GÖNDER</button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>

    <script>
        const socket = io();
        const videoGrid = document.getElementById('video-grid');
        const myVideo = document.createElement('video');
        myVideo.muted = true;
        const peers = {};

        // URL'den Oda Bilgisini Al
        const urlParams = new URLSearchParams(window.location.search);
        const ROOM_ID = urlParams.get('room') || 'global';
        const myNickname = "<%= user.nickname %>";

        // 1. Peer Objesini Başlat
        const myPeer = new Peer(undefined, {
            host: '/',
            port: '443',
            secure: true
        });

        // 2. Kamera ve Mikrofonu Al
        navigator.mediaDevices.getUserMedia({
            video: true,
            audio: true
        }).then(stream => {
            // Kendi görüntümü ekle
            addVideoStream(myVideo, stream, "SEN (KOMUTAN)");

            // Karşıdan gelen aramayı cevapla
            myPeer.on('call', call => {
                call.answer(stream);
                const video = document.createElement('video');
                call.on('stream', userVideoStream => {
                    addVideoStream(video, userVideoStream, "DİĞER KOMUTAN");
                });
            });

            // Soket hazır olduğunda odaya katıl
            socket.on('connect', () => {
                myPeer.on('open', id => {
                    console.log("Peer ID Hazır: " + id);
                    socket.emit('join-meeting', { roomId: ROOM_ID, peerId: id });
                });
            });

            // Odaya yeni biri girdiğinde onu ara
            socket.on('user-connected', data => {
                console.log("Yeni bir komutan bağlandı: " + data.nickname);
                // "connectToNewUser" fonksiyonu burada devreye girer
                connectToNewUser(data.peerId, stream);
            });
        }).catch(err => {
            console.error("Kameraya erişilemedi: ", err);
            alert("Kamera izni gerekiyor!");
        });

        // 3. Yeni Kullanıcıya Bağlanma Fonksiyonu
        function connectToNewUser(userId, stream) {
            console.log("Diğer kullanıcı aranıyor: " + userId);
            const call = myPeer.call(userId, stream);
            const video = document.createElement('video');
            
            call.on('stream', userVideoStream => {
                addVideoStream(video, userVideoStream, "DİĞER KOMUTAN");
            });
            
            call.on('close', () => {
                video.remove();
            });

            peers[userId] = call;
        }

        // 4. Video Akışını Ekrana Ekleme
        function addVideoStream(video, stream, label) {
            video.srcObject = stream;
            video.addEventListener('loadedmetadata', () => {
                video.play();
            });
            
            const container = document.createElement('div');
            container.className = "video-box";
            
            const nameTag = document.createElement('div');
            nameTag.innerText = label;
            nameTag.className = "name-tag";
            
            container.append(video);
            container.append(nameTag);
            videoGrid.append(container);
        }

        // 5. Mesajlaşma
        function sendMeetingMessage() {
            const input = document.getElementById('meeting-input');
            const text = input.value.trim();
            if (text) {
                socket.emit('meeting-message', { text, roomId: ROOM_ID });
                input.value = '';
            }
        }

        socket.on('new-meeting-message', data => {
            const msgDiv = document.createElement('div');
            msgDiv.style.padding = "5px";
            msgDiv.innerHTML = `<strong style="color: #00ffcc;">${data.sender}:</strong> ${data.text}`;
            const container = document.getElementById('meeting-messages');
            container.append(msgDiv);
            container.scrollTop = container.scrollHeight;
        });

        // Kullanıcı ayrıldığında videoyu kaldır
        socket.on('user-disconnected', userId => {
            if (peers[userId]) peers[userId].close();
        });

    </script>
</body>
</html>
