<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL MEETING | Virtual Hub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #0a0a0a; }
        body { background: var(--dark-bg); color: white; font-family: 'Segoe UI', sans-serif; height: 100vh; overflow: hidden; }

        /* Navbar & Logo */
        .meeting-nav {
            background: rgba(0,0,0,0.8); border-bottom: 1px solid rgba(57, 255, 20, 0.2);
            padding: 10px 20px; display: flex; justify-content: space-between; align-items: center;
        }
        .meeting-nav img { height: 40px; filter: drop-shadow(0 0 5px var(--neon-green)); }

        /* Ana Ekran Düzeni */
        .meeting-container { display: flex; height: calc(100vh - 65px); }
        
        /* Video Alanı */
        .video-grid { flex: 3; background: #000; padding: 20px; display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 15px; overflow-y: auto; }
        .video-box { background: #1a1a1a; border: 1px solid #333; border-radius: 15px; position: relative; overflow: hidden; aspect-ratio: 16/9; }
        .video-box video { width: 100%; height: 100%; object-fit: cover; }
        .user-label { position: absolute; bottom: 10px; left: 10px; background: rgba(0,0,0,0.6); padding: 2px 10px; border-radius: 5px; font-size: 0.8rem; border-left: 3px solid var(--neon-green); }

        /* Sağ Panel (Chat & Gift) */
        .side-panel { flex: 1; border-left: 1px solid #222; background: #0f0f0f; display: flex; flex-direction: column; }
        .panel-header { padding: 15px; border-bottom: 1px solid #222; color: var(--neon-green); font-weight: bold; text-align: center; }
        
        .chat-area { flex: 1; overflow-y: auto; padding: 15px; font-size: 0.9rem; }
        .msg { margin-bottom: 10px; background: rgba(255,255,255,0.05); padding: 8px; border-radius: 8px; }
        .msg b { color: var(--neon-green); }

        .gift-section { padding: 15px; border-top: 1px solid #222; background: #141414; }
        .gift-btn { width: 48%; margin-bottom: 5px; font-size: 0.8rem; }

        /* Kontrol Butonları */
        .controls { position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%); display: flex; gap: 15px; z-index: 100; }
        .control-btn { width: 50px; height: 50px; border-radius: 50%; border: none; background: #222; color: white; transition: 0.3s; }
        .control-btn:hover { background: var(--neon-green); color: black; }
        .btn-end { background: #ff4444; }
    </style>
</head>
<body>

    <nav class="meeting-nav">
        <a href="/profil"><img src="/caracter/logo/logo.png" alt="BPL LOGO"></a>
        <div class="text-secondary small">Room ID: <span class="text-info"><%= roomId %></span></div>
        <div class="text-success fw-bold">BPL: <span id="user-bpl"><%= user.bpl %></span></div>
    </nav>

    <div class="meeting-container">
        <div class="video-grid" id="video-grid">
            <div class="video-box">
                <video id="my-video" muted autoplay playsinline></video>
                <div class="user-label">You (<%= user.nickname %>)</div>
            </div>
        </div>

        <div class="side-panel">
            <div class="panel-header"><i class="fas fa-comments"></i> LIVE CHAT & GIFTS</div>
            
            <div class="chat-area" id="chat-messages">
                <div class="msg"><b>System:</b> Welcome to the room! Be respectful.</div>
            </div>

            <div class="gift-section text-center">
                <p class="small text-secondary mb-2">Send a Gift to Selected User</p>
                <button class="btn btn-outline-warning gift-btn" onclick="sendGift(50)"><i class="fas fa-coffee"></i> 50 BPL</button>
                <button class="btn btn-outline-info gift-btn" onclick="sendGift(200)"><i class="fas fa-gem"></i> 200 BPL</button>
                <button class="btn btn-outline-danger gift-btn" onclick="sendGift(500)"><i class="fas fa-crown"></i> 500 BPL</button>
                <button class="btn btn-outline-success gift-btn" onclick="challengeUser()"><i class="fas fa-swords"></i> CHALLENGE</button>
                
                <div class="input-group mt-2">
                    <input type="text" id="chat-input" class="form-control bg-dark text-white border-secondary" placeholder="Type message...">
                    <button class="btn btn-success" onclick="sendMessage()"><i class="fas fa-paper-plane"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="controls">
        <button class="control-btn" onclick="toggleMic()"><i class="fas fa-microphone" id="mic-icon"></i></button>
        <button class="control-btn" onclick="toggleCam()"><i class="fas fa-video" id="cam-icon"></i></button>
        <button class="control-btn btn-end" onclick="location.href='/profil'"><i class="fas fa-phone-slash"></i></button>
    </div>

    <script>
        const socket = io();
        const nickname = "<%= user.nickname %>";
        const roomId = "<%= roomId %>";
        let myStream;

        // Kamerayı Başlat
        navigator.mediaDevices.getUserMedia({ video: true, audio: true }).then(stream => {
            myStream = stream;
            document.getElementById('my-video').srcObject = stream;
        }).catch(err => alert("Camera access denied!"));

        // Oda Katılımı
        socket.emit('register-user', { id: "<%= user._id %>", nickname: nickname });
        socket.emit('join-room', { roomId, nickname });

        // Mesaj Gönderme
        function sendMessage() {
            const input = document.getElementById('chat-input');
            if(input.value) {
                socket.emit('chat-message', { nickname, message: input.value, roomId });
                input.value = '';
            }
        }

        socket.on('new-message', (data) => {
            const chat = document.getElementById('chat-messages');
            chat.innerHTML += `<div class="msg"><b>${data.sender}:</b> ${data.text}</div>`;
            chat.scrollTop = chat.scrollHeight;
        });

        // Hediye Gönderme Fonksiyonu (Simüle)
        function sendGift(amount) {
            alert(amount + " BPL değerinde hediye gönderildi!");
            // Backend'e socket üzerinden bakiye güncelleme isteği atılmalı
        }

        // Meydan Okuma
        function challengeUser() {
            const target = prompt("Kime meydan okumak istersin? (Nickname yazın)");
            if(target) {
                socket.emit('challenge-player', { targetNickname: target });
                alert("Meydan okuma gönderildi!");
            }
        }

        // Mikrofon/Kamera Kapatma
        function toggleMic() {
            const audioTrack = myStream.getAudioTracks()[0];
            audioTrack.enabled = !audioTrack.enabled;
            document.getElementById('mic-icon').className = audioTrack.enabled ? 'fas fa-microphone' : 'fas fa-microphone-slash';
        }

        function toggleCam() {
            const videoTrack = myStream.getVideoTracks()[0];
            videoTrack.enabled = !videoTrack.enabled;
            document.getElementById('cam-icon').className = videoTrack.enabled ? 'fas fa-video' : 'fas fa-video-slash';
        }
    </script>
</body>
</html>
