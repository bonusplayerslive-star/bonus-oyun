<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL | STRATEJİK TOPLANTI</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
    <style>
        :root { --neon: #00ffcc; --bg: #050a0f; --card: #0d161f; }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body { 
            background: var(--bg); 
            color: white; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        /* Video Paneli - Esnek Izgara */
        #video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 15px;
            padding: 15px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .video-container {
            position: relative;
            background: var(--card);
            border: 2px solid #1a2a3a;
            border-radius: 12px;
            overflow: hidden;
            aspect-ratio: 4/3;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background: #000;
        }

        .user-label {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(0,0,0,0.7);
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 13px;
            border-left: 3px solid var(--neon);
            z-index: 10;
        }

        /* Sohbet ve Kontrol Paneli */
        .ui-panel {
            position: fixed;
            bottom: 0;
            width: 100%;
            background: rgba(13, 22, 31, 0.95);
            backdrop-filter: blur(10px);
            border-top: 1px solid #1a2a3a;
            padding: 15px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            z-index: 100;
        }

        #chat-messages {
            height: 100px;
            overflow-y: auto;
            font-size: 14px;
            margin-bottom: 5px;
            padding-right: 5px;
        }

        .chat-row { margin-bottom: 4px; border-bottom: 1px solid #1a2a3a; padding-bottom: 2px; }
        .chat-nick { color: var(--neon); font-weight: bold; }

        .controls {
            display: flex;
            gap: 10px;
        }

        input {
            flex: 1;
            background: #1a2a3a;
            border: 1px solid #333;
            color: white;
            padding: 12px;
            border-radius: 8px;
            outline: none;
        }

        button {
            background: var(--neon);
            color: black;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        button:active { transform: scale(0.95); }

        /* Mobil Uyumluluk Ayarı */
        @media (max-width: 600px) {
            #video-grid { grid-template-columns: 1fr; }
            .ui-panel { padding-bottom: 30px; } /* iOS alt barı için */
        }
    </style>
</head>
<body>

    <div id="video-grid"></div>

    <div class="ui-panel">
        <div id="chat-messages"></div>
        <div class="controls">
            <input type="text" id="chat-input" placeholder="Mesaj gönder..." onkeypress="if(event.key==='Enter') sendMessage()">
            <button onclick="sendMessage()">GÖNDER</button>
        </div>
    </div>

    <script>
        const socket = io();
        const videoGrid = document.getElementById('video-grid');
        const urlParams = new URLSearchParams(window.location.search);
        const ROOM_ID = urlParams.get('room') || 'global';
        const peers = {};

        const myPeer = new Peer(undefined, {
            host: '/',
            port: '443',
            secure: true
        });

        async function startSystem() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { width: { ideal: 640 }, height: { ideal: 480 }, facingMode: "user" }, 
                    audio: true 
                });

                // Kendi Videom
                addVideoStream(document.createElement('video'), stream, "SİZ (KOMUTAN)");

                // Aramaları Cevapla
                myPeer.on('call', call => {
                    call.answer(stream);
                    const video = document.createElement('video');
                    call.on('stream', userStream => addVideoStream(video, userStream, "BİRLİK ÜYESİ"));
                });

                // Yeni Kullanıcı Geldiğinde Ara
                socket.on('user-connected', data => {
                    setTimeout(() => { // PeerJS el sıkışması için kısa gecikme
                        const call = myPeer.call(data.peerId, stream);
                        const video = document.createElement('video');
                        call.on('stream', userStream => addVideoStream(video, userStream, data.nickname || "BİRLİK ÜYESİ"));
                        peers[data.peerId] = call;
                    }, 1000);
                });

                // Odaya Giriş Yap
                myPeer.on('open', id => {
                    socket.emit('join-meeting', { roomId: ROOM_ID, peerId: id });
                });

            } catch (err) {
                alert("Kamera veya Mikrofon erişimi reddedildi! Lütfen izin verin.");
            }
        }

        function addVideoStream(video, stream, label) {
            video.srcObject = stream;
            video.addEventListener('loadedmetadata', () => video.play());
            
            const container = document.createElement('div');
            container.className = 'video-container';
            const nameTag = document.createElement('div');
            nameTag.className = 'user-label';
            nameTag.innerText = label;
            
            container.append(video, nameTag);
            videoGrid.append(container);
        }

        function sendMessage() {
            const input = document.getElementById('chat-input');
            if (input.value.trim()) {
                socket.emit('meeting-message', { roomId: ROOM_ID, text: input.value });
                input.value = '';
            }
        }

        socket.on('new-meeting-message', data => {
            const msgDiv = document.createElement('div');
            msgDiv.className = 'chat-row';
            msgDiv.innerHTML = `<span class="chat-nick">${data.sender}:</span> ${data.text}`;
            const box = document.getElementById('chat-messages');
            box.append(msgDiv);
            box.scrollTop = box.scrollHeight;
        });

        socket.on('user-disconnected', peerId => {
            if (peers[peerId]) peers[peerId].close();
            window.location.reload(); // En güvenli temizlik yolu
        });

        startSystem();
    </script>
</body>
</html>
