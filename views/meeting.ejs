    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root { --gold: #ffd700; --gold-dark: #d4af37; --panel: #111; }
        
        /* Mobil uyumlu ana yapÄ± */
        body { 
            background: #000; 
            color: #fff; 
            height: 100vh; 
            display: flex; 
            flex-direction: row; /* Desktop varsayÄ±lan */
            margin: 0; 
            overflow: hidden;
            font-family: 'Cinzel', serif; 
        }

        /* SOL TARAF: DÄ°KEY VÄ°DEO LÄ°STESÄ° (Desktop) */
        .video-sidebar { 
            width: 180px; 
            border-right: 2px solid var(--gold-dark); 
            background: #0a0a0a; 
            display: flex; 
            flex-direction: column; 
            gap: 15px; 
            padding: 15px; 
            overflow-y: auto; 
            align-items: center; 
        }

        /* MOBÄ°L Ä°Ã‡Ä°N VÄ°DEO LÄ°STESÄ° DÃœZENÄ° */
        @media (max-width: 768px) {
            body { flex-direction: column; }
            .video-sidebar { 
                width: 100%; 
                height: 140px; 
                flex-direction: row; 
                border-right: none; 
                border-bottom: 2px solid var(--gold-dark); 
                overflow-x: auto; 
                overflow-y: hidden;
                padding: 10px;
            }
        }

        .v-slot { 
            width: 100px; height: 100px; 
            border: 3px solid var(--gold-dark); 
            border-radius: 50%; 
            overflow: hidden; 
            position: relative; 
