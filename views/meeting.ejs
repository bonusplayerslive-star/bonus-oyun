            border-top: 1px solid var(--gold-dark); 
        }

        /* MOBÄ°L GÄ°RÄ°Å Ã‡UBUÄU OPTÄ°MÄ°ZASYONU */
        @media (max-width: 576px) {
            .input-bar { padding: 8px; }
            #my-bpl-container { font-size: 0.8rem; }
            #chat-input { font-size: 0.8rem; }
        }

        #user-menu { 
            position: fixed; display: none; background: #222; 
            border: 1px solid var(--gold); z-index: 10000; 
            min-width: 160px; border-radius: 4px; 
            box-shadow: 0 4px 15px rgba(0,0,0,0.5); 
        }

        .menu-item { padding: 12px 15px; cursor: pointer; color: #fff; font-size: 0.85rem; border-bottom: 1px solid #333; }
        .menu-item:hover { background: var(--gold-dark); color: #000; }
    </style>
</head>
<body>

<div class="video-sidebar" id="video-list">
    <div class="v-slot" id="slot-me">
        <video id="localVideo" autoplay muted playsinline></video>
        <div class="user-label">SÄ°Z</div>
    </div>
</div>

<div class="main-content">
    <div id="vip-chat"></div>
    <div class="input-bar">
        <div id="my-bpl-container" class="text-warning fw-bold text-nowrap">
            <span id="my-bpl"><%= user.bpl %></span> <small>BPL</small>
        </div>
        <input type="text" id="chat-input" class="form-control bg-dark text-white border-warning" placeholder="Mesaj yazÄ±n...">
        <button onclick="sendMessage()" class="btn btn-warning fw-bold">GÃ–NDER</button>
    </div>
</div>

<div id="user-menu">
    <div class="menu-item" onclick="executeAction('gift')">ğŸ 50 BPL HEDÄ°YE</div>
    <div class="menu-item" onclick="executeAction('arena')">âš”ï¸ ARENA DAVETÄ°</div>
    <div class="menu-item text-danger text-center" onclick="hideMenu()">KAPAT</div>
</div>
<div id="user-menu">
    <div class="menu-header text-center py-2 border-bottom border-warning text-warning" style="font-size: 0.7rem;">
        <span id="selected-user-name">KULLANICI</span> Ä°Ã‡Ä°N EYLEM
    </div>
    <div class="menu-item" onclick="executeAction('gift', 50)">ğŸ 50 BPL HEDÄ°YE</div>
    <div class="menu-item" onclick="executeAction('gift', 100)">ğŸ 100 BPL HEDÄ°YE</div>
    <div class="menu-item" onclick="executeAction('gift', 150)">ğŸ 150 BPL HEDÄ°YE</div>
    <div class="menu-item" onclick="executeAction('arena')">âš”ï¸ ARENAYA DAVET</div>
    <div class="menu-item text-danger text-center" onclick="hideMenu()">KAPAT</div>
</div>

<script>
    // ... mevcut socket ve peer tanÄ±mlamalarÄ± ...

    function showMenu(e, nick) {
        if(nick === "SÄ°Z" || nick === myNick) return;
        selectedUserNick = nick;
        
        const menu = document.getElementById('user-menu');
        const nameLabel = document.getElementById('selected-user-name');
        if(nameLabel) nameLabel.innerText = nick.toUpperCase();
        
        menu.style.display = 'block';
        menu.style.left = e.pageX + 'px';
        menu.style.top = e.pageY + 'px';
    }

    function executeAction(action, amount = 0) {
        // Mevcut BPL miktarÄ±nÄ± DOM'dan sayÄ± olarak al
        const currentBpl = parseInt(document.getElementById('my-bpl').innerText);

        if(action === 'gift') {
            // KURAL 1: KullanÄ±cÄ±nÄ±n bakiyesi 5500'Ã¼n altÄ±na dÃ¼ÅŸmemeli
            // KURAL 2: GÃ¶ndermek istediÄŸi miktar elindeki paradan fazla olmamalÄ±
            if (currentBpl < 5500) {
                appendMsg("SÄ°STEM", "âš ï¸ Hediye gÃ¶ndermek iÃ§in bakiyeniz 5500 BPL Ã¼zerinde olmalÄ±dÄ±r.");
                hideMenu();
                return;
            }

            if (currentBpl - amount < 5500) {
                appendMsg("SÄ°STEM", `âš ï¸ Bu miktarÄ± gÃ¶nderirseniz bakiyeniz 5500'Ã¼n altÄ±na dÃ¼ÅŸÃ¼yor. Daha az gÃ¶nderin.`);
                hideMenu();
                return;
            }

            // EÄŸer kontrollerden geÃ§erse gÃ¶nder
            socket.emit('send-gift-vip', { 
                targetNick: selectedUserNick, 
                amount: amount, 
                tax: Math.floor(amount * 0.1), // Ã–rn: %10 vergi
                room: currentRoom 
            });
            
            appendMsg("SÄ°STEM", `âœ… ${selectedUserNick} kullanÄ±cÄ±sÄ±na ${amount} BPL gÃ¶nderildi.`);
            
        } else if(action === 'arena') {
            appendMsg("SÄ°STEM", `âš”ï¸ ${selectedUserNick} Arena'ya davet edildi!`);
            window.location.href = `/arena?target=${selectedUserNick}`;
        }
        hideMenu();
    }

    // Sunucudan bakiye gÃ¼ncellemesi gelirse (Bakiye dÃ¼ÅŸtÃ¼ÄŸÃ¼nde ekranÄ± gÃ¼ncellemek iÃ§in)
    socket.on('update-bpl', (newBpl) => {
        const bplElement = document.getElementById('my-bpl');
        if(bplElement) bplElement.innerText = newBpl;
    });

