                <% } else { %>
                    <a href="/profil" class="btn btn-neon-green btn-sm">DASHBOARD</a>
                    <a href="/logout" class="btn btn-outline-danger btn-sm ms-2">EXIT</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container hero-section">
        <h1 class="hero-title">BPL ECOSYSTEM</h1>
        <p class="lead text-uppercase fw-bold" style="letter-spacing: 4px; color: #888;">Where Gamers Evolve Into Legends</p>
        
        <div class="row g-4 mt-5">
            <div class="col-lg-6 text-start">
                <div class="glass-card">
                    <h4 class="mb-4" style="color: var(--neon-green); font-family: 'Orbitron';">TOKEN ALLOCATION</h4>
                    <div class="token-bar-container">
                        <div class="token-bar bg-success" style="height: 75%;"><span class="bar-label">75%</span><span class="bar-name">Company</span></div>
                        <div class="token-bar bg-info" style="height: 15%;"><span class="bar-label">15%</span><span class="bar-name">Market</span></div>
                        <div class="token-bar bg-warning" style="height: 5%;"><span class="bar-label">5%</span><span class="bar-name">Gaming</span></div>
                        <div class="token-bar bg-danger" style="height: 5%;"><span class="bar-label">5%</span><span class="bar-name">Ads</span></div>
                    </div>
                    <p class="mt-5 small text-muted text-center italic">* Algorithmic distribution based on BPL Smart Contract v2.0</p>
                </div>
            </div>
            
            <div class="col-lg-6 text-start">
                <div class="glass-card">
                    <h4 class="text-warning mb-3" style="font-family: 'Orbitron';">CONTRACT ADDRESS (BEP20)</h4>
                    <p class="small text-secondary">Add this to your MetaMask or TrustWallet to receive your earnings:</p>
                    <div class="contract-address mb-4" onclick="copyContract()">
                        <i class="far fa-copy me-2"></i>0xB47FD3EFAcDdB316685D14B89598D78B4ce25181
                    </div>
                    
                    <ul class="feature-list list-unstyled mt-4">
                        <li><i class="fas fa-shield-alt"></i> Instant 2500 BPL Bonus on Registration</li>
                        <li><i class="fas fa-video"></i> Private Video/Voice Meeting Rooms</li>
                        <li><i class="fas fa-gift"></i> Global Gifting & Transfer System</li>
                        <li><i class="fas fa-wallet"></i> Secure BEP20 Withdrawal Support</li>
                    </ul>

                    <div class="mt-4 pt-3 border-top border-secondary">
                        <small class="text-info"><i class="fas fa-info-circle me-1"></i> Tüm işlemler blockchain üzerinde kayıt altına alınmaktadır.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="auth-overlay" id="authOverlay">
        <div class="glass-card" style="width: 100%; max-width: 450px;">
            <div class="text-center mb-4">
                <img src="/caracter/page/logo.jpeg" style="height: 60px;" onerror="this.src='/caracter/page/welcome.jpg'">
                <h3 id="authTitle" class="mt-3" style="color: var(--neon-green); font-family: 'Orbitron';">ACCESS PANEL</h3>
            </div>
            
            <form id="authForm" method="POST" action="/login">
                <div id="nicknameGroup">
                    <label class="small text-success fw-bold mb-1">OPERATOR NICKNAME</label>
                    <input type="text" name="nickname" id="nicknameInput" class="form-control custom-input" placeholder="Komutan adınızı seçin...">
                </div>
                
                <label class="small text-success fw-bold mb-1">EMAIL ADDRESS</label>
                <input type="email" name="email" class="form-control custom-input" placeholder="name@example.com" required>
                
                <label class="small text-success fw-bold mb-1">SECURE PASSWORD</label>
                <input type="password" name="password" class="form-control custom-input" placeholder="••••••••" required>

                <button type="submit" class="btn btn-neon-green w-100 py-3 mt-2">INITIALIZE SYSTEM</button>

<label class="small text-success fw-bold mb-1">SECURE PASSWORD</label>
<input type="password" name="password" class="form-control custom-input" placeholder="••••••••" required>

<div class="text-end mb-3" id="forgotPasswordLink">
    <a href="#contact" onclick="closeAuth()" class="text-info small text-decoration-none">
        <i class="fas fa-key me-1"></i>Şifremi Unuttum?
    </a>
</div>
                <button type="button" class="btn btn-link text-secondary w-100 mt-2 text-decoration-none" onclick="closeAuth()">ABORT MISSION</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openAuth(type) {
            const overlay = document.getElementById('authOverlay');
            const title = document.getElementById('authTitle');
            const nickGroup = document.getElementById('nicknameGroup');
            const nickInput = document.getElementById('nicknameInput');
            const form = document.getElementById('authForm');
            
            overlay.style.display = 'flex';
       const forgotLink = document.getElementById('forgotPasswordLink');     
            if(type === 'login') {
                form.action = '/login'; 
                title.innerText = 'CORE LOGIN';
                nickGroup.style.display = 'none'; 
                nickInput.required = false;
            } else {
                form.action = '/register'; 
                title.innerText = 'NEW RECRUIT';
                nickGroup.style.display = 'block'; 
                nickInput.required = true;
            }
        }
        
        function closeAuth() { document.getElementById('authOverlay').style.display = 'none'; }
        
        function copyContract() {
            const address = '0xB47FD3EFAcDdB316685D14B89598D78B4ce25181';
            navigator.clipboard.writeText(address).then(() => {
                alert('Contract Address Copied: ' + address);
            });
        }

        // Dışarı tıklayınca kapatma
        window.onclick = function(event) {
            const overlay = document.getElementById('authOverlay');
            if (event.target == overlay) closeAuth();
        }
    </script>

<section id="contact" class="py-5 bg-dark">
    <div class="container border border-success p-4 rounded shadow-lg">
        <h2 class="text-center text-success mb-4" style="font-family: 'Orbitron';">BPL DESTEK</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form id="helpForm">
                    <div class="mb-3">
                        <input type="email" id="helpEmail" class="form-control bg-black text-white border-secondary" placeholder="Kayıtlı E-posta Adresiniz" required>
                        <div class="form-text text-muted">Şifre sıfırlama talepleri için kayıtlı e-postanızı kullanın.</div>
                    </div>
                    <div class="mb-3">
                        <select id="helpSubject" class="form-select bg-black text-white border-secondary">
                            <option value="Genel Destek">Genel Destek</option>
                            <option value="Sifre Islemleri">Şifremi Unuttum / Değiştirme</option>
                            <option value="Talep Iptali">Çekim Talebi İptali</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <textarea id="helpMessage" class="form-control bg-black text-white border-secondary" rows="4" placeholder="Mesajınız..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-success w-100">MESAJI GÖNDER</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
document.getElementById('helpForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const data = {
        email: document.getElementById('helpEmail').value,
        subject: document.getElementById('helpSubject').value,
        message: document.getElementById('helpMessage').value
    };

    fetch('/api/help-request', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
    })
    .then(res => res.json())
    .then(res => {
        if(res.success) {
            Swal.fire('Başarılı', 'Mesajınız iletildi. E-postanızı kontrol edin.', 'success');
            document.getElementById('helpForm').reset();
        }
    });
});
</script>



