        function toggleForgot(show) {
            const authTabs = document.getElementById('authTabs');
            const loginPane = document.getElementById('pills-login');
            const registerPane = document.getElementById('pills-register');
            const forgotForm = document.getElementById('forgotForm');

            if (show) {
                if(authTabs) authTabs.style.display = 'none';
                if(loginPane) loginPane.classList.remove('active', 'show');
                if(registerPane) registerPane.classList.remove('active', 'show');
                forgotForm.style.display = 'block';
            } else {
                if(authTabs) authTabs.style.display = 'block';
                if(loginPane) loginPane.classList.add('active', 'show');
                forgotForm.style.display = 'none';
