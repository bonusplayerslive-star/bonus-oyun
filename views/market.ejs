<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL ULTIMATE MARKET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --neon-green: #39FF14; --neon-blue: #00d4ff; --dark-bg: #050505; }
        body { background-color: var(--dark-bg); color: #fff; font-family: 'Orbitron', sans-serif; }
        
        /* Navbar */
        .navbar-bpl { background: rgba(0,0,0,0.95); border-bottom: 2px solid var(--neon-green); padding: 15px; }
        .balance-box { background: rgba(57, 255, 20, 0.1); border: 1px solid var(--neon-green); padding: 5px 15px; border-radius: 50px; }

        /* Market Cards */
        .animal-card { 
            background: #111; border-radius: 20px; overflow: hidden; position: relative; 
            border: 1px solid #222; transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .animal-card:hover { 
            border-color: var(--neon-green); transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(57, 255, 20, 0.2);
        }
        
        .card-img-wrapper { position: relative; overflow: hidden; height: 250px; }
        .animal-img { width: 100%; height: 100%; object-fit: cover; transition: 0.5s; }
        .animal-card:hover .animal-img { transform: scale(1.1) rotate(2deg); }

        .rarity-tag {
            position: absolute; top: 10px; left: 10px; padding: 4px 12px; 
            border-radius: 5px; font-size: 0.7rem; font-weight: bold; text-transform: uppercase;
            z-index: 10;
        }
        .legendary { background: linear-gradient(to right, #ff8c00, #ff0000); color: white; }
        .wild { background: linear-gradient(to right, #00d4ff, #0055ff); color: white; }

        /* Stats */
        .stat-row { margin-bottom: 8px; }
        .stat-label { font-size: 0.7rem; color: #888; margin-bottom: 2px; display: flex; justify-content: space-between; }
        .progress { height: 6px; background: #222; border-radius: 10px; overflow: visible; }
        .progress-bar { border-radius: 10px; box-shadow: 0 0 10px currentColor; }

        /* Button Custom */
        .btn-buy-action {
            background: transparent; border: 2px solid var(--neon-green); color: var(--neon-green);
            font-weight: bold; border-radius: 10px; padding: 10px; width: 100%; transition: 0.3s;
        }
        .btn-buy-action:hover:not(:disabled) { background: var(--neon-green); color: #000; box-shadow: 0 0 20px var(--neon-green); }
        .btn-buy-action:disabled { border-color: #444; color: #444; cursor: not-allowed; }

        .inventory-status { font-size: 0.8rem; color: #aaa; text-align: center; margin-top: 10px; }
    </style>
</head>
<body>

<nav class="navbar navbar-bpl sticky-top">
    <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand d-flex align-items-center" href="/profil">
            <img src="/caracter/logo/logo.jpeg" alt="BPL" style="width: 45px; border-radius: 8px; margin-right: 12px;">
            <span style="color: var(--neon-green); font-weight: 800; letter-spacing: 2px;">BPL MARKET</span>
        </a>
        <div class="d-flex align-items-center">
            <div class="balance-box me-3">
                <i class="fas fa-coins text-warning"></i> 
                <span class="ms-1 fw-bold" id="balanceDisplay"><%= user.bpl.toLocaleString() %> BPL</span>
            </div>
            <a href="/profil" class="btn btn-outline-light btn-sm"><i class="fas fa-user"></i> Profile</a>
        </div>
    </div>
</nav>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="text-uppercase fw-bold" style="letter-spacing: 5px;">Karakterini Seç</h2>
        <div class="inventory-status">
            Çanta Kapasitesi: 
            <span class="<%= user.inventory.length >= 3 ? 'text-danger fw-bold' : 'text-success' %>">
                <%= user.inventory.length %> / 3
            </span>
        </div>
    </div>

    <h4 class="mb-4 d-flex align-items-center"><span class="badge legendary me-2">LEGENDARY</span> 5000 BPL</h4>
    <div class="row g-4 mb-5">
        <% 
        const legends = [
            {id: 'LION', ad: 'Aslan', dosya: 'Lion.jpg', atk: 95, hp: 150},
            {id: 'RHINO', ad: 'Gergedan', dosya: 'Rhino.jpg', atk: 60, hp: 200},
            {id: 'GORILLA', ad: 'Goril', dosya: 'Gorilla.jpg', atk: 85, hp: 160},
            {id: 'TIGER', ad: 'Kaplan', dosya: 'Tiger.jpg', atk: 90, hp: 140}
        ];
        %>
        <% legends.forEach(animal => { %>
            <div class="col-md-3">
                <div class="animal-card">
                    <div class="rarity-tag legendary">EFSANEVİ</div>
                    <div class="card-img-wrapper">
                        <img src="/caracter/profile/<%= animal.dosya %>" class="animal-img" onerror="this.src='/caracter/page/welcome.jpg'">
                    </div>
                    <div class="p-3">
                        <h5 class="text-center text-uppercase fw-bold mb-3"><%= animal.ad %></h5>
                        <div class="stat-row">
                            <div class="stat-label"><span>SALDIRI</span><span><%= animal.atk %></span></div>
                            <div class="progress"><div class="progress-bar" style="width: <%= animal.atk %>%; background: #ff4444;"></div></div>
                        </div>
                        <div class="stat-row mb-4">
                            <div class="stat-label"><span>SAĞLIK</span><span><%= animal.hp %></span></div>
                            <div class="progress"><div class="progress-bar" style="width: <%= (animal.hp/200)*100 %>%; background: #00C851;"></div></div>
                        </div>
                        <button onclick="buyAnimal('<%= animal.id %>', 5000)" 
                                class="btn-buy-action" 
                                <%= (user.inventory.length >= 3 || user.inventory.includes(animal.id)) ? 'disabled' : '' %>>
                            <%= user.inventory.includes(animal.id) ? 'SAHİPSİN' : (user.inventory.length >= 3 ? 'ÇANTA DOLU' : 'SATIN AL') %>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <h4 class="mb-4 d-flex align-items-center"><span class="badge wild me-2">WILD</span> 1000 BPL</h4>
    <div class="row g-4">
        <% 
        const wilds = [
            {id: 'BEAR', ad: 'Ayı', dosya: 'Bear.jpg', atk: 55, hp: 110},
            {id: 'SNAKE', ad: 'Yılan', dosya: 'Snake.jpg', atk: 80, hp: 70},
            {id: 'WOLF', ad: 'Kurt', dosya: 'Kurd.jpg', atk: 65, hp: 95},
            {id: 'EAGLE', ad: 'Kartal', dosya: 'Eagle.jpg', atk: 75, hp: 80}
        ];
        %>
        <% wilds.forEach(animal => { %>
            <div class="col-md-3">
                <div class="animal-card">
                    <div class="rarity-tag wild">VAHŞİ</div>
                    <div class="card-img-wrapper">
                        <img src="/caracter/profile/<%= animal.dosya %>" class="animal-img" onerror="this.src='/caracter/page/welcome.jpg'">
                    </div>
                    <div class="p-3">
                        <h5 class="text-center text-uppercase fw-bold mb-3"><%= animal.ad %></h5>
                        <div class="stat-row mb-4">
                            <div class="stat-label">GÜÇ SEVİYESİ <span><%= animal.atk %></span></div>
                            <div class="progress"><div class="progress-bar" style="width: <%= animal.atk %>%; background: var(--neon-blue);"></div></div>
                        </div>
                        <button onclick="buyAnimal('<%= animal.id %>', 1000)" 
                                class="btn-buy-action"
                                <%= (user.inventory.length >= 3 || user.inventory.includes(animal.id)) ? 'disabled' : '' %>>
                            <%= user.inventory.includes(animal.id) ? 'SAHİPSİN' : (user.inventory.length >= 3 ? 'ÇANTA DOLU' : 'SATIN AL') %>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script>
    function buyAnimal(animalName, price) {
        if(!confirm(animalName + ' karakterini orduya katmak istiyor musun?')) return;

        fetch('/buy-animal', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ animalName, price })
        })
        .then(r => r.json())
        .then(data => {
            if(data.status === 'success') {
                alert('İşlem Başarılı! Karakter envantere eklendi.');
                location.reload();
            } else {
                alert('Hata: ' + data.msg);
            }
        });
    }
</script>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.emit('register-user', { id: "<%= user._id %>", nickname: "<%= user.nickname %>" });
</script>

</body>
</html>
