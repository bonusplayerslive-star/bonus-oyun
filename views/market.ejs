<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL ULTIMATE MARKET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --neon-green: #39FF14; --neon-blue: #00d4ff; --dark-bg: #050505; }
        body { background-color: var(--dark-bg); color: #fff; font-family: 'Orbitron', sans-serif; }
        .navbar-bpl { background: rgba(0,0,0,0.95); border-bottom: 2px solid var(--neon-green); padding: 15px; }
        .balance-box { background: rgba(57, 255, 20, 0.1); border: 1px solid var(--neon-green); padding: 5px 15px; border-radius: 50px; }
        .animal-card { background: #111; border-radius: 20px; overflow: hidden; position: relative; border: 1px solid #222; transition: all 0.4s; height: 100%; }
        .animal-card:hover { border-color: var(--neon-green); transform: translateY(-10px); box-shadow: 0 10px 30px rgba(57, 255, 20, 0.2); }
        .card-img-wrapper { position: relative; overflow: hidden; height: 200px; }
        .animal-img { width: 100%; height: 100%; object-fit: cover; }
        .rarity-tag { position: absolute; top: 10px; left: 10px; padding: 4px 12px; border-radius: 5px; font-size: 0.7rem; font-weight: bold; z-index: 10; }
        .legendary { background: linear-gradient(to right, #ff8c00, #ff0000); color: white; }
        .wild { background: linear-gradient(to right, #00d4ff, #0055ff); color: white; }
        .stat-label { font-size: 0.7rem; color: #888; display: flex; justify-content: space-between; }
        .progress { height: 6px; background: #222; margin-bottom: 10px; }
        .btn-buy-action { background: transparent; border: 2px solid var(--neon-green); color: var(--neon-green); font-weight: bold; border-radius: 10px; padding: 10px; width: 100%; transition: 0.3s; }
        .btn-buy-action:hover:not(:disabled) { background: var(--neon-green); color: #000; box-shadow: 0 0 20px var(--neon-green); }
        .btn-buy-action:disabled { border-color: #444; color: #444; }
    </style>
</head>
<body>

<nav class="navbar navbar-bpl sticky-top">
    <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand d-flex align-items-center" href="/profil">
            <img src="/caracter/logo/logo.jpeg" alt="BPL" style="width: 45px; border-radius: 8px; margin-right: 12px;">
            <span style="color: var(--neon-green); font-weight: 800;">BPL MARKET</span>
        </a>
        <div class="d-flex align-items-center">
            <div class="balance-box me-3">
                <i class="fas fa-coins text-warning"></i> 
                <span class="ms-1 fw-bold"><%= user.bpl.toLocaleString() %> BPL</span>
            </div>
            <a href="/profil" class="btn btn-outline-light btn-sm">Profil</a>
        </div>
    </div>
</nav>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="text-uppercase fw-bold">Karakter Mağazası</h2>
        <p class="text-muted">Envanter: <span class="<%= user.inventory.length >= 3 ? 'text-danger' : 'text-success' %>"><%= user.inventory.length %> / 3</span></p>
    </div>

<div class="row g-4">
    <% animals.forEach(animal => { %>
        <div class="col-md-3">
            <div class="animal-card">
                <div class="rarity-tag <%= animal.price === 5000 ? 'legendary' : 'wild' %>">
                    <%= animal.price === 5000 ? 'PREMIUM' : 'NORMAL' %>
                </div>
                
                <div class="card-img-wrapper">
                    <img src="<%= animal.img %>" class="animal-img" onerror="this.src='/caracter/profile/Bear.jpg'">
                </div>

                <div class="p-3">
                    <h5 class="text-center fw-bold"><%= animal.name %></h5>
                    <p class="text-center text-warning fw-bold mb-3"><%= animal.price %> BPL</p>

                    <% 
                        // Kullanıcıda bu hayvan var mı kontrol et
                        const hasAnimal = user.inventory.some(i => i.name === animal.name);
                    %>

                    <button onclick="buyAnimal('<%= animal.id %>', '<%= animal.name %>')" 
                            class="btn-buy-action" 
                            <%= (user.inventory.length >= 3 || hasAnimal) ? 'disabled' : '' %>>
                        <%= hasAnimal ? 'SAHİPSİN' : (user.inventory.length >= 3 ? 'KONTENJAN DOLU' : 'SATIN AL') %>
                    </button>
                </div>
            </div>
        </div>
    <% }) %>
</div>
</div>

<script>
    function buyAnimal(animalId, animalName) {
        if(!confirm(animalName + ' satın alınsın mı?')) return;

        fetch('/buy-animal', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ animalId: parseInt(animalId) })
        })
        .then(r => r.json())
        .then(data => {
            if(data.status === 'success') {
                alert('Başarılı: ' + data.msg);
                location.reload();
            } else {
                alert('Hata: ' + data.msg);
            }
        })
        .catch(err => alert('Sunucu hatası!'));
    }
</script>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.emit('register-user', { id: "<%= user._id %>", nickname: "<%= user.nickname %>" });
</script>

</body>
</html>

