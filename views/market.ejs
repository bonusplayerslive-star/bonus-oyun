<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL ULTIMATE MARKET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #0a0a0a; --card-bg: #111; --gold: #FFD700; }
        
        body { 
            background: var(--dark-bg); 
            color: white; 
            font-family: 'Rajdhani', sans-serif;
            background: url('/caracter/page/welcome.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding-bottom: 50px;
        }
        
        body::before {
            content: ""; position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.88); z-index: -1;
        }

        .market-header {
            background: rgba(0,0,0,0.95);
            border-bottom: 2px solid var(--neon-green);
            padding: 10px 0;
            margin-bottom: 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }

        .balance-box {
            background: rgba(57, 255, 20, 0.1); 
            border: 1px solid var(--neon-green); 
            border-radius: 8px;
            padding: 5px 12px;
        }

        .animal-card {
            background: rgba(20, 20, 20, 0.9);
            border-radius: 15px;
            padding: 12px;
            text-align: center;
            transition: 0.3s;
            margin-bottom: 20px;
            border: 1px solid rgba(57, 255, 20, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .animal-card:hover { 
            transform: translateY(-5px); 
            border-color: var(--neon-green);
            box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
        }

        .animal-img {
            width: 100%;
            aspect-ratio: 1/1;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 12px;
            border: 1px solid #333;
            background: #000;
        }

        .animal-name { font-family: 'Orbitron'; font-size: 1rem; color: var(--neon-green); margin-bottom: 3px; }
        .price-tag { color: var(--gold); font-weight: bold; font-size: 1.1rem; margin-bottom: 12px; display: block; font-family: 'Orbitron'; }

        .stat-container { flex-grow: 1; margin-bottom: 15px; text-align: left; }
        .stat-label { font-size: 0.7rem; font-family: 'Orbitron'; color: #888; margin-bottom: 2px; display: flex; justify-content: space-between; }
        .progress { background-color: #000; height: 5px; border-radius: 2px; margin-bottom: 8px; }
        .progress-bar-hp { background: #ff416c; }
        .progress-bar-atk { background: #39FF14; }

        .btn-buy {
            background: transparent;
            border: 1px solid var(--neon-green);
            color: var(--neon-green);
            width: 100%;
            padding: 8px;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            transition: 0.3s;
        }
        .btn-buy:hover { background: var(--neon-green); color: black; }
        
        .btn-owned { 
            background: #1a1a1a; color: #444; border: 1px solid #222; 
            width: 100%; padding: 8px; font-family: 'Orbitron'; font-size: 0.75rem;
        }

        @media (max-width: 576px) {
            .market-header h2 { font-size: 1.2rem; }
        }
    </style>
</head>
<body>

<header class="market-header">
    <div class="container d-flex justify-content-between align-items-center">
        <h2 class="mb-0 text-uppercase"><i class="fas fa-shopping-cart"></i> MARKET</h2>
        <div class="d-flex align-items-center">
            <div class="balance-box me-2">
                <span style="color: var(--gold); font-family: 'Orbitron';">
                    <i class="fas fa-coins"></i> <span id="currentBpl"><%= user.bpl.toLocaleString() %></span>
                </span>
            </div>
            <a href="/profil" class="btn btn-sm btn-outline-light"><i class="fas fa-home"></i></a>
        </div>
    </div>
</header>

<div class="container mt-3">
    <div class="row g-3">
        <% 
        const marketAnimals = [
            { name: 'Tiger', price: 5000, hp: 90, atk: 95, def: 60 },
            { name: 'Lion', price: 5000, hp: 85, atk: 90, def: 70 },
            { name: 'Rhino', price: 5000, hp: 100, atk: 60, def: 95 },
            { name: 'Gorilla', price: 5000, hp: 95, atk: 85, def: 80 },
            { name: 'Bear', price: 1000, hp: 80, atk: 75, def: 65 },
            { name: 'Crocodile', price: 1000, hp: 75, atk: 80, def: 70 },
            { name: 'Eagle', price: 1000, hp: 50, atk: 85, def: 40 },
            { name: 'Wolf', price: 1000, hp: 60, atk: 70, def: 55 },
            { name: 'Snake', price: 1000, hp: 45, atk: 90, def: 30 },
            { name: 'Falcon', price: 1000, hp: 40, atk: 95, def: 35 }
        ];

        marketAnimals.forEach(animal => { 
            const isOwned = user.inventory.some(item => item.name === animal.name);
        %>
            <div class="col-6 col-md-4 col-lg-3">
                <div class="animal-card">
                    <img src="/caracter/profile/<%= animal.name %>.jpg" 
                         alt="<%= animal.name %>" 
                         class="animal-img"
                         onerror="this.src='/caracter/profile/Logo.jpeg'">
                    
                    <h3 class="animal-name"><%= animal.name.toUpperCase() %></h3>
                    <span class="price-tag"><%= animal.price.toLocaleString() %> BPL</span>

                    <div class="stat-container d-none d-sm-block">
                        <div class="stat-label"><span>HP</span><span><%= animal.hp %>%</span></div>
                        <div class="progress"><div class="progress-bar-hp" style="width: <%= animal.hp %>%"></div></div>
                        
                        <div class="stat-label"><span>ATK</span><span><%= animal.atk %>%</span></div>
                        <div class="progress"><div class="progress-bar-atk" style="width: <%= animal.atk %>%"></div></div>
                    </div>

                    <% if (isOwned) { %>
                        <button class="btn btn-owned" disabled>EDİNİLDİ</button>
                    <% } else { %>
                        <button onclick="buyAnimal('<%= animal.name %>', <%= animal.price %>)" class="btn btn-buy">
                            SATIN AL
                        </button>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    let userBpl = <%= user.bpl %>;
    const SAFETY_LIMIT = 5500;

    async function buyAnimal(name, price) {
        if (userBpl - price < SAFETY_LIMIT) {
            Swal.fire({
                title: 'LIMIT ENGELLİ',
                text: `Stratejik limit (5500 BPL) altına düşemezsiniz.`,
                icon: 'error',
                background: '#0a0a0a',
                color: '#fff',
                confirmButtonColor: '#39FF14'
            });
            return;
        }

        const result = await Swal.fire({
            title: 'ONAY',
            text: `${name} satın alınsın mı?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#39FF14',
            cancelButtonColor: '#d33',
            confirmButtonText: 'EVET',
            background: '#111',
            color: '#fff'
        });

        if (result.isConfirmed) {
            try {
                const res = await fetch('/api/buy-item', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ itemName: name, price: price })
                });
                
                const data = await res.json();
                if (data.success) {
                    Swal.fire({ title: 'BAŞARILI', icon: 'success', background: '#111', color: '#fff' })
                    .then(() => location.reload());
                } else {
                    Swal.fire('HATA', data.error || 'İşlem başarısız', 'error');
                }
            } catch (err) {
                Swal.fire('HATA', 'Sunucu hatası!', 'error');
            }
        }
    }
</script>
</body>
</html>
