<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL ULTIMATE MARKET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #050505; }
        body { background-color: var(--dark-bg); color: #fff; font-family: 'Orbitron', sans-serif; }
        .navbar-bpl { background: rgba(0,0,0,0.95); border-bottom: 2px solid var(--neon-green); padding: 15px; }
        .balance-box { background: rgba(57, 255, 20, 0.1); border: 1px solid var(--neon-green); padding: 5px 15px; border-radius: 50px; }
        .animal-card { background: #111; border-radius: 20px; overflow: hidden; border: 1px solid #222; transition: 0.4s; height: 100%; }
        .animal-card:hover { border-color: var(--neon-green); transform: translateY(-10px); }
        .card-img-wrapper { position: relative; height: 200px; background: #000; }
        .animal-img { width: 100%; height: 100%; object-fit: cover; }
        .rarity-tag { position: absolute; top: 10px; left: 10px; padding: 4px 12px; border-radius: 5px; font-size: 0.7rem; font-weight: bold; z-index: 10; }
        .premium { background: linear-gradient(45deg, #ff8c00, #ff0000); }
        .normal { background: linear-gradient(45deg, #00d4ff, #0055ff); }
        .btn-buy-action { background: transparent; border: 2px solid var(--neon-green); color: var(--neon-green); font-weight: bold; border-radius: 10px; padding: 10px; width: 100%; transition: 0.3s; }
        .btn-buy-action:hover:not(:disabled) { background: var(--neon-green); color: #000; box-shadow: 0 0 15px var(--neon-green); }
        .btn-buy-action:disabled { border-color: #444; color: #444; cursor: not-allowed; }
    </style>
</head>
<body>

<nav class="navbar navbar-bpl sticky-top">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="navbar-brand d-flex align-items-center">
            <img src="/caracter/logo/logo.jpeg" style="width: 40px; border-radius: 5px; margin-right: 10px;">
            <span style="color: var(--neon-green); font-weight: 800;">BPL MARKET</span>
        </div>
        <div class="d-flex align-items-center">
            <div class="balance-box me-3">
                <i class="fas fa-coins text-warning"></i> 
                <span class="ms-1 fw-bold"><%= user.bpl.toLocaleString() %> BPL</span>
            </div>
            <a href="/profil" class="btn btn-sm btn-outline-light">Profil</a>
        </div>
    </div>
</nav>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-uppercase">KARAKTER MAĞAZASI</h2>
        <p class="text-muted">Kapasite: <span class="<%= user.inventory.length >= 3 ? 'text-danger' : 'text-success' %> fw-bold"><%= user.inventory.length %> / 3</span></p>
    </div>

    <div class="row g-4">
        <% animals.forEach(animal => { %>
            <div class="col-md-3">
                <div class="animal-card">
                    <div class="rarity-tag <%= animal.price >= 5000 ? 'premium' : 'normal' %>">
                        <%= animal.price >= 5000 ? 'PREMIUM' : 'STANDART' %>
                    </div>
                    
                    <div class="card-img-wrapper">
                        <img src="<%= animal.img %>" class="animal-img" onerror="this.src='/caracter/profile/Bear.jpg'">
                    </div>

                    <div class="p-3 text-center">
                        <h5 class="fw-bold"><%= animal.name %></h5>
                        <p class="text-warning fw-bold"><%= animal.price.toLocaleString() %> BPL</p>

                        <% 
                            const isOwned = user.inventory.some(i => i.name === animal.name);
                            const isFull = user.inventory.length >= 3;
                        %>

                        <button onclick="buyAction('<%= animal.id %>', '<%= animal.name %>')" 
                                class="btn-buy-action" 
                                <%= (isOwned || isFull) ? 'disabled' : '' %>>
                            <% if(isOwned) { %> SAHİPSİN <% } else if(isFull) { %> DOLU <% } else { %> SATIN AL <% } %>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script>
    async function buyAction(id, name) {
        if(!confirm(name + ' satın alınsın mı?')) return;

        try {
            const response = await fetch('/buy-animal', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ animalId: id })
            });
            
            const data = await response.json();
            
            if(data.status === 'success') {
                alert('Başarılı: ' + data.msg);
                window.location.reload();
            } else {
                alert('Uyarı: ' + data.msg);
            }
        } catch (err) {
            alert('Sunucuyla bağlantı kurulamadı!');
        }
    }
</script>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.emit('register-user', { id: "<%= user._id %>", nickname: "<%= user.nickname %>" });
</script>

</body>
</html>
