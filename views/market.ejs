<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>BPL ULTIMATE MARKET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #050505; --gold: #FFD700; }
        body { 
            background: var(--dark-bg); color: white; font-family: 'Rajdhani', sans-serif;
            background: url('/caracter/page/welcome.jpg') no-repeat center center fixed;
            background-size: cover; margin: 0; height: 100vh; overflow: hidden;
        }
        .overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); z-index: -1; }

        /* Header - 10vh */
        .market-header {
            height: 10vh; background: rgba(0,0,0,0.9); border-bottom: 2px solid var(--neon-green);
            display: flex; align-items: center; justify-content: space-between; padding: 0 15px;
        }
        .balance-box { 
            background: rgba(57, 255, 20, 0.1); border: 1px solid var(--neon-green); 
            border-radius: 8px; padding: 4px 12px; font-family: 'Orbitron'; color: var(--neon-green);
        }

        /* Content - 90vh */
        .market-content {
            height: 90vh; overflow-y: auto; padding: 15px;
            padding-bottom: 100px; /* Alttan boşluk */
        }

        .animal-card {
            background: rgba(20, 20, 20, 0.95); border-radius: 12px; padding: 10px;
            border: 1px solid rgba(255,255,255,0.1); text-align: center;
            transition: 0.3s; position: relative;
        }
        .animal-card:hover { border-color: var(--neon-green); transform: translateY(-5px); }
        
        .animal-img { 
            width: 100%; aspect-ratio: 1/1; object-fit: cover; 
            border-radius: 8px; margin-bottom: 8px;
            border: 1px solid #333;
        }

        .stats-mini { font-size: 0.7rem; color: #aaa; margin-bottom: 5px; display: flex; justify-content: space-around; }
        .stats-mini span { color: var(--neon-green); }

        .price-tag { color: var(--gold); font-family: 'Orbitron'; font-size: 0.85rem; margin-bottom: 8px; display: block; }

        .btn-buy { 
            background: transparent; border: 1px solid var(--neon-green); color: var(--neon-green);
            width: 100%; padding: 8px; font-family: 'Orbitron'; font-size: 0.7rem; border-radius: 5px;
        }
        .btn-buy:active { background: var(--neon-green); color: black; }

        /* Custom Scrollbar */
        .market-content::-webkit-scrollbar { width: 5px; }
        .market-content::-webkit-scrollbar-thumb { background: var(--neon-green); border-radius: 10px; }
    </style>
</head>
<body>
    <div class="overlay"></div>
    
    <div class="market-header">
        <a href="/profil" style="color: white; text-decoration: none;"><i class="fas fa-chevron-left"></i> Geri</a>
        <div class="font-orbitron" style="font-size: 0.9rem;">BPL MARKET</div>
        <div class="balance-box">
            <i class="fas fa-coins"></i> <%= user.bpl.toLocaleString() %>
        </div>
    </div>

    <div class="market-content">
        <div class="row g-3">
            <% 
            const animals = [
                {id: 'Bear', p: 1300, a: 25, d: 15}, {id: 'Crocodile', p: 1500, a: 30, d: 20},
                {id: 'Eagle', p: 1200, a: 35, d: 10}, {id: 'Falcon', p: 1100, a: 32, d: 8},
                {id: 'Gorilla', p: 3500, a: 45, d: 35}, {id: 'Lion', p: 3500, a: 50, d: 30},
                {id: 'Rhino', p: 3600, a: 40, d: 50}, {id: 'Snake', p: 1300, a: 28, d: 12},
                {id: 'Tiger', p: 3500, a: 52, d: 28}, {id: 'Wolf', p: 1500, a: 30, d: 18}
            ];
            %>

            <% animals.forEach(a => { %>
            <div class="col-6 col-sm-4 col-lg-3">
                <div class="animal-card">
                    <img src="/caracter/profile/<%= a.id %>.jpg" class="animal-img" loading="lazy">
                    <div class="font-orbitron" style="font-size: 0.75rem; color: white;"><%= a.id %></div>
                    <div class="stats-mini">
                        <span>ATK: <%= a.a %></span> <span>DEF: <%= a.d %></span>
                    </div>
                    <span class="price-tag"><%= a.p %> BPL</span>
                    <button class="btn-buy" onclick="buyItem('<%= a.id %>')">SATIN AL</button>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function buyItem(name) {
            const res = await fetch('/buy-animal', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ animalName: name })
            });
            const data = await res.json();

            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Hayırlı Olsun!',
                    text: data.message,
                    background: '#111',
                    color: '#fff',
                    confirmButtonColor: '#39FF14'
                }).then(() => location.href = '/profil');
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Hata!',
                    text: data.error,
                    background: '#111',
                    color: '#fff',
                    confirmButtonColor: '#ff0000'
                });
            }
        }
    </script>
</body>
</html>
