<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BPL ULTIMATE MARKET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root { --neon-green: #39FF14; --dark-bg: #0a0a0a; --card-bg: #111; }
        body { background: var(--dark-bg); color: white; font-family: 'Rajdhani', sans-serif; }
        
        .market-header {
            background: rgba(0,0,0,0.9);
            border-bottom: 2px solid var(--neon-green);
            padding: 15px 0;
            margin-bottom: 30px;
        }

        .animal-card {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s;
            margin-bottom: 20px;
            border: 1px solid #333;
        }

        .animal-card:hover { transform: translateY(-10px); border-color: var(--neon-green); }

        .animal-img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
            /* Resimler burada dinamikleşecek */
        }

        .price-tag { color: #FFD700; font-weight: bold; font-size: 1.2rem; }
        .btn-buy {
            background: transparent;
            border: 1px solid var(--neon-green);
            color: var(--neon-green);
            width: 100%;
            padding: 10px;
            font-weight: bold;
            transition: 0.3s;
        }
        .btn-buy:hover { background: var(--neon-green); color: black; }
        .btn-owned { background: #333; color: #777; border: none; cursor: not-allowed; }
    </style>
</head>
<body>

<header class="market-header">
    <div class="container d-flex justify-content-between align-items-center">
        <h2 style="color: var(--neon-green);"><i class="fas fa-shopping-cart"></i> BPL MARKET</h2>
        <div class="d-flex align-items-center">
            <div class="me-3 px-3 py-1" style="background: rgba(57, 255, 20, 0.1); border: 1px solid var(--neon-green); border-radius: 20px;">
                <span style="color: #FFD700;"><i class="fas fa-coins"></i> <%= user.bpl %> BPL</span>
            </div>
            <a href="/profil" class="btn btn-outline-light btn-sm">Profil</a>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <% animals.forEach(animal => { %>
            <div class="col-md-3 col-sm-6">
                <div class="animal-card">
                    <img src="<%= animal.img %>" class="animal-img" alt="<%= animal.name %>">
                    
                    <h4><%= animal.name.toUpperCase() %></h4>
                    <p class="price-tag"><%= animal.price %> BPL</p>

                    <% 
                        // Kullanıcının bu hayvana zaten sahip olup olmadığını kontrol et
                        const isOwned = user.inventory.some(item => item.name === animal.name);
                    %>

                    <% if (isOwned) { %>
                        <button class="btn btn-owned" disabled>SAHİPSİN</button>
                    <% } else { %>
                        <button onclick="buyAnimal('<%= animal.id %>')" id="btn-<%= animal.id %>" class="btn btn-buy">SATIN AL</button>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    async function buyAnimal(id) {
        const res = await fetch('/buy-animal', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ animalId: id })
        });
        
        const data = await res.json();
        
        if (data.status === 'success') {
            Swal.fire({
                title: 'Tebrikler!',
                text: data.msg,
                icon: 'success',
                confirmButtonColor: '#39FF14'
            }).then(() => location.reload()); // Sayfayı yenile ki bakiye ve buton güncellensin
        } else {
            Swal.fire('Hata', data.msg, 'error');
        }
    }
</script>

</body>
</html>
