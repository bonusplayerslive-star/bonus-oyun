<%- include('header') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@500;700&display=swap');
    
    body {
        background: #050505;
        font-family: 'Rajdhani', sans-serif;
        color: #fff;
    }

    /* MOBİL UYUMLU BAŞLIK */
    .dev-title {
        font-family: 'Orbitron'; 
        letter-spacing: 2px;
        font-size: 1.5rem;
    }
    @media (min-width: 768px) { .dev-title { font-size: 2.5rem; } }

    .upgrade-card {
        background: rgba(15, 15, 15, 0.95);
        border: 1px solid rgba(57, 255, 20, 0.15);
        border-radius: 15px;
        transition: all 0.3s ease;
        margin-bottom: 20px;
        position: relative;
        backdrop-filter: blur(10px);
    }
    
    .upgrade-card:hover {
        border-color: #39FF14;
        box-shadow: 0 0 20px rgba(57, 255, 20, 0.15);
    }

    .stat-label {
        font-size: 0.75rem;
        color: #aaa;
        font-family: 'Orbitron', sans-serif;
        margin-bottom: 3px;
    }

    .progress {
        height: 6px;
        background-color: #111;
        margin-bottom: 10px;
        border-radius: 3px;
    }

    /* MOBİL RESİM BOYUTU */
    .char-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 2px solid #39FF14;
        border-radius: 15px;
        background: #111;
    }

    .btn-upgrade {
        font-family: 'Orbitron', sans-serif;
        font-size: 0.7rem;
        font-weight: 700;
        padding: 10px;
        border-radius: 8px;
    }

    .wallet-banner {
        background: rgba(17, 17, 17, 0.9);
        border: 1px solid #ffd700;
        padding: 10px 20px;
        border-radius: 12px;
        display: inline-block;
    }

    .level-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #39FF14;
        color: #000;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        padding: 3px 10px;
        border-radius: 5px;
    }
</style>

<div class="container mt-4 mb-5">
    <div class="text-center mb-4">
        <h1 class="neon-text fw-bold dev-title text-uppercase mb-2" style="color: #39FF14;">GELİŞTİRME MERKEZİ</h1>
        
        <div class="wallet-banner mt-2">
            <span class="text-white-50 small d-block">MEVCUT KAYNAK</span>
            <span class="text-warning fw-bold h4" id="balanceDisplay">
                <i class="fas fa-coins me-1"></i><%= user.bpl %> <small>BPL</small>
            </span>
        </div>
    </div>

    <div class="row g-3">
        <% if (user.inventory && user.inventory.length > 0) { %>
            <% user.inventory.forEach(animal => { %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="upgrade-card p-3">
                        <div class="level-badge">LVL <%= animal.level || 1 %></div>
                        
                        <div class="d-flex align-items-center mb-3">
                            <img src="/caracter/profile/<%= animal.name.toLowerCase() %>.jpg" 
                                 onerror="this.src='/caracter/page/Logo.jpeg'"
                                 class="char-img me-3" 
                                 alt="<%= animal.name %>">
                            <div>
                                <h5 class="text-white text-uppercase mb-0" style="font-family: 'Orbitron';"><%= animal.name %></h5>
                                <small class="text-success">SAVAŞA HAZIR</small>
                            </div>
                        </div>

                        <div class="stat-box mb-3">
                            <div class="d-flex justify-content-between stat-label">
                                <span><i class="fas fa-heart text-danger me-1"></i> HP</span>
                                <span class="text-white"><%= animal.hp %> / <%= animal.maxHp || 500 %></span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-danger" style="width: <%= (animal.hp / (animal.maxHp || 500)) * 100 %>%"></div>
                            </div>
                            <button class="btn btn-outline-danger w-100 btn-upgrade" onclick="upgradeStat('<%= animal.name %>', 'hp')">
                                <i class="fas fa-plus-circle me-1"></i> HP +10 <span class="float-end">15 BPL</span>
                            </button>
                        </div>

                        <div class="stat-box mb-3">
                            <div class="d-flex justify-content-between stat-label">
                                <span><i class="fas fa-fist-raised text-warning me-1"></i> SALDIRI</span>
                                <span class="text-white"><%= animal.atk %> / 200</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" style="width: <%= (animal.atk / 200) * 100 %>%"></div>
                            </div>
                            <button class="btn btn-outline-warning w-100 btn-upgrade" onclick="upgradeStat('<%= animal.name %>', 'atk')">
                                <i class="fas fa-plus-circle me-1"></i> ATK +5 <span class="float-end">15 BPL</span>
                            </button>
                        </div>

                        <div class="stat-box">
                            <div class="d-flex justify-content-between stat-label">
                                <span><i class="fas fa-shield-alt text-info me-1"></i> SAVUNMA</span>
                                <span class="text-white"><%= animal.def %> / 200</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-info" style="width: <%= (animal.def / 200) * 100 %>%"></div>
                            </div>
                            <button class="btn btn-outline-info w-100 btn-upgrade" onclick="upgradeStat('<%= animal.name %>', 'def')">
                                <i class="fas fa-plus-circle me-1"></i> DEF +5 <span class="float-end">10 BPL</span>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <div class="p-4 border border-secondary rounded-4 bg-dark">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h5 class="text-white">ENVANTER BOŞ</h5>
                    <p class="text-muted small">Geliştirecek bir birimin yok.</p>
                    <a href="/market" class="btn btn-success btn-sm px-4">MARKETE GİT</a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Dinamik bakiye takibi (Backend'den gelen ilk değer)
    let currentBalance = parseInt("<%= user.bpl %>");
    const SAFETY_LIMIT = 300;

    function upgradeStat(animalName, statType) {
        const cost = (statType === 'def') ? 10 : 15;

        // 1. ÖN KONTROL: Bakiye 5500'ün altına düşer mi?
        if (currentBalance - cost < SAFETY_LIMIT) {
            Swal.fire({
                title: 'KAYNAK YETERSİZ',
                text: `Stratejik bakiye sınırı (300 BPL) nedeniyle bu işlemi yapamazsınız. Mevcut: ${currentBalance} BPL`,
                icon: 'error',
                background: '#111',
                color: '#fff',
                confirmButtonColor: '#ff003c'
            });
            return;
        }

        Swal.fire({
            title: 'GELİŞTİRME ONAYI',
            text: `${animalName} birimi için ${statType.toUpperCase()} takviyesi yapılacaktır.`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#39FF14',
            cancelButtonColor: '#333',
            confirmButtonText: 'ONAYLA',
            cancelButtonText: 'İPTAL',
            background: '#111',
            color: '#fff'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch('/api/upgrade-stat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ animalName, statType })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        currentBalance = data.newBalance; // Yerel bakiyeyi güncelle
                        document.getElementById('balanceDisplay').innerHTML = `<i class="fas fa-coins me-1"></i>${data.newBalance} <small>BPL</small>`;
                        
                        Swal.fire({
                            title: 'TEKNASYON TAMAMLANDI',
                            text: 'Birim özellikleri güncellendi.',
                            icon: 'success',
                            timer: 1500,
                            showConfirmButton: false,
                            background: '#111',
                            color: '#fff'
                        }).then(() => {
                            location.reload(); // Değerleri görsel olarak yenile
                        });
                    } else {
                        Swal.fire('HATA', data.error || 'İşlem başarısız.', 'error');
                    }
                })
                .catch(err => {
                    Swal.fire('BAĞLANTI HATASI', 'Sunucu yanıt vermiyor.', 'error');
                });
            }
        });
    }
</script>

<%- include('footer') %>

